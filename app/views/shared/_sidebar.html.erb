        <span class="badge bg-success ms-auto"><%= current_user.school.users.where(user_type: 'teacher').count %></span>
      <% end %>
    </li>
    
    <li class="nav-item">
      <%= link_to direction_classrooms_path, class: "nav-link #{'active' if controller_name == 'classrooms' && controller.class.module_parent.name.downcase == 'direction'}" do %>
        <i class="fas fa-door-open"></i> Turmas
        <span class="badge bg-info ms-auto"><%= current_user.school.classrooms.count %></span>
      <% end %>
    </li>
    
    <li class="nav-item">
      <%= link_to direction_subjects_path, class: "nav-link #{'active' if controller_name == 'subjects' && controller.class.module_parent.name.downcase == 'direction'}" do %>
        <i class="fas fa-book"></i> Disciplinas
        <span class="badge bg-warning ms-auto"><%= current_user.school.subjects.count %></span>
      <% end %>
    </li>
    
    <li class="nav-item">
      <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
        <span>Acadêmico</span>
      </h6>
    </li>
    
    <li class="nav-item">
      <%= link_to direction_class_schedules_path, class: "nav-link #{'active' if controller_name == 'class_schedules' && controller.class.module_parent.name.downcase == 'direction'}" do %>
        <i class="fas fa-calendar-alt"></i> Grade de Horários
      <% end %>
    </li>
    
    <li class="nav-item">
      <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
        <span>Comunicação</span>
      </h6>
    </li>
    
    <li class="nav-item">
      <%= link_to direction_events_path, class: "nav-link #{'active' if controller_name == 'events' && controller.class.module_parent.name.downcase == 'direction'}" do %>
        <i class="fas fa-calendar-plus"></i> Eventos Escolares
      <% end %>
    </li>
    
    <li class="nav-item">
      <%= link_to direction_messages_path, class: "nav-link #{'active' if controller_name == 'messages' && controller.class.module_parent.name.downcase == 'direction'}" do %>
        <i class="fas fa-envelope"></i> Mensagens
        <% unread_count = current_user.received_messages.unread.count %>
        <% if unread_count > 0 %>
          <span class="badge bg-danger ms-auto"><%= unread_count %></span>
        <% end %>
      <% end %>
    </li>
    
    <li class="nav-item">
      <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
        <span>Gestão</span>
      </h6>
    </li>
    
    <li class="nav-item">
      <%= link_to direction_documents_path, class: "nav-link #{'active' if controller_name == 'documents' && controller.class.module_parent.name.downcase == 'direction'}" do %>
        <i class="fas fa-file-archive"></i> GED da Escola
      <% end %>
    </li>
    
    <li class="nav-item">
      <%= link_to direction_reports_path, class: "nav-link #{'active' if controller_name == 'reports' && controller.class.module_parent.name.downcase == 'direction'}" do %>
        <i class="fas fa-chart-bar"></i> Relatórios
      <% end %>
    </li>
  </ul>


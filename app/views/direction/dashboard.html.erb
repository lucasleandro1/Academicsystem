<% content_for :title, "Painel da Direção" %>

<%= render 'improvements_alert' %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><i class="fas fa-tachometer-alt"></i> Painel da Direção</h1>
    <p class="text-muted mb-0">Bem-vindo, <%= current_user.full_name %> - <%= current_user.school.name %></p>
  </div>
  <div class="text-end">
    <small class="text-muted">
      Hoje: <%= Date.current.strftime("%d/%m/%Y") %>
      <br>
      Ano letivo: <%= Date.current.year %>
    </small>
  </div>
</div>

<!-- Cards de Estatísticas -->
<div class="row mb-4">
  <div class="col-lg-3 col-md-6 mb-3">
    <div class="card card-stat bg-primary text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="card-title">Alunos</h6>
            <h2><%= @total_students %></h2>
            <small>Matriculados</small>
          </div>
          <div class="align-self-center">
            <i class="fas fa-user-graduate fa-2x"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-primary bg-opacity-75">
        <%= link_to direction_students_path, class: "text-white text-decoration-none small" do %>
          <i class="fas fa-arrow-right"></i> Ver detalhes
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3 col-md-6 mb-3">
    <div class="card card-stat bg-success text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="card-title">Professores</h6>
            <h2><%= @total_teachers %></h2>
            <small>Ativos</small>
          </div>
          <div class="align-self-center">
            <i class="fas fa-chalkboard-teacher fa-2x"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-success bg-opacity-75">
        <%= link_to direction_teachers_path, class: "text-white text-decoration-none small" do %>
          <i class="fas fa-arrow-right"></i> Ver detalhes
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3 col-md-6 mb-3">
    <div class="card card-stat bg-info text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="card-title">Turmas</h6>
            <h2><%= @total_classrooms %></h2>
            <small>Ativas</small>
          </div>
          <div class="align-self-center">
            <i class="fas fa-users fa-2x"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-info bg-opacity-75">
        <%= link_to direction_classrooms_path, class: "text-white text-decoration-none small" do %>
          <i class="fas fa-arrow-right"></i> Ver detalhes
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3 col-md-6 mb-3">
    <div class="card card-stat bg-warning text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h6 class="card-title">Disciplinas</h6>
            <h2><%= @total_subjects %></h2>
            <small>Cadastradas</small>
          </div>
          <div class="align-self-center">
            <i class="fas fa-book fa-2x"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-warning bg-opacity-75">
        <%= link_to direction_subjects_path, class: "text-white text-decoration-none small" do %>
          <i class="fas fa-arrow-right"></i> Ver detalhes
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Ações Rápidas -->
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-bolt"></i> Ações Rápidas</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-6 mb-2">
            <%= link_to new_direction_student_path, class: "btn btn-outline-primary w-100" do %>
              <i class="fas fa-user-plus"></i><br>
              <small>Novo Aluno</small>
            <% end %>
          </div>
          <div class="col-6 mb-2">
            <%= link_to new_direction_teacher_path, class: "btn btn-outline-success w-100" do %>
              <i class="fas fa-chalkboard-teacher"></i><br>
              <small>Novo Professor</small>
            <% end %>
          </div>
          <div class="col-6 mb-2">
            <%= link_to new_direction_classroom_path, class: "btn btn-outline-info w-100" do %>
              <i class="fas fa-plus-circle"></i><br>
              <small>Nova Turma</small>
            <% end %>
          </div>
          <div class="col-6 mb-2">
            <%= link_to new_direction_event_path, class: "btn btn-outline-warning w-100" do %>
              <i class="fas fa-calendar-plus"></i><br>
              <small>Novo Evento</small>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Gestão Escolar -->
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-cogs"></i> Gestão Escolar</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to direction_events_path, class: "btn btn-outline-primary" do %>
            <i class="fas fa-calendar-alt"></i>
            <strong>Eventos Escolares</strong><br>
            <small class="text-muted">Gerenciar calendário e eventos</small>
          <% end %>
          <%= link_to direction_documents_path, class: "btn btn-outline-info" do %>
            <i class="fas fa-folder-open"></i>
            <strong>GED - Gestão de Documentos</strong><br>
            <small class="text-muted">Armazenar e organizar documentos</small>
          <% end %>
          <%= link_to direction_reports_path, class: "btn btn-outline-success" do %>
            <i class="fas fa-chart-bar"></i>
            <strong>Relatórios Gerenciais</strong><br>
            <small class="text-muted">Acompanhar indicadores da escola</small>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Seção de Módulos Principais -->
<div class="row mb-4">
  <div class="col-12">
    <h4><i class="fas fa-layer-group"></i> Módulos Principais</h4>
    <p class="text-muted">Acesso rápido aos principais recursos da direção</p>
    
    <!-- Botões de teste rápido -->
    <div class="btn-group mb-3" role="group">
      <%= link_to direction_events_path, class: "btn btn-outline-primary btn-sm" do %>
        <i class="fas fa-calendar-alt"></i> Testar Eventos
      <% end %>
      <%= link_to direction_documents_path, class: "btn btn-outline-info btn-sm" do %>
        <i class="fas fa-folder-open"></i> Testar Documentos
      <% end %>
      <%= link_to direction_reports_path, class: "btn btn-outline-success btn-sm" do %>
        <i class="fas fa-chart-bar"></i> Testar Relatórios
      <% end %>
    </div>
  </div>
</div>

<div class="row mb-4">
  <!-- Eventos Escolares -->
  <div class="col-lg-4 mb-3">
    <div class="card border-primary h-100">
      <div class="card-header bg-primary text-white">
        <h6 class="mb-0"><i class="fas fa-calendar-alt"></i> Eventos Escolares</h6>
      </div>
      <div class="card-body">
        <p class="card-text">Organize e gerencie eventos, reuniões e atividades escolares.</p>
        <div class="row g-2">
          <div class="col-6">
            <%= link_to direction_events_path, 
                        class: "btn btn-sm btn-outline-primary w-100",
                        'data-bs-toggle': "tooltip",
                        'data-bs-placement': "top",
                        title: "Ver lista de eventos" do %>
              <i class="fas fa-list"></i> Ver Eventos
            <% end %>
          </div>
          <div class="col-6">
            <%= link_to new_direction_event_path, 
                        class: "btn btn-sm btn-primary w-100",
                        'data-bs-toggle': "tooltip",
                        'data-bs-placement': "top", 
                        title: "Criar novo evento" do %>
              <i class="fas fa-plus"></i> Novo
            <% end %>
          </div>
        </div>
        <div class="mt-2">
          <small class="text-muted">
            <strong>Próximos:</strong> <%= @upcoming_events.count %> evento(s)
          </small>
        </div>
      </div>
    </div>
  </div>

  <!-- GED - Gestão de Documentos -->
  <div class="col-lg-4 mb-3">
    <div class="card border-info h-100">
      <div class="card-header bg-info text-white">
        <h6 class="mb-0"><i class="fas fa-folder-open"></i> GED - Documentos</h6>
      </div>
      <div class="card-body">
        <p class="card-text">Sistema de gestão eletrônica de documentos da escola.</p>
        <div class="row g-2">
          <div class="col-6">
            <%= link_to direction_documents_path, 
                        class: "btn btn-sm btn-outline-info w-100",
                        'data-bs-toggle': "tooltip",
                        'data-bs-placement': "top",
                        title: "Ver documentos da escola" do %>
              <i class="fas fa-folder"></i> Documentos
            <% end %>
          </div>
          <div class="col-6">
            <%= link_to new_direction_document_path, 
                        class: "btn btn-sm btn-info w-100",
                        'data-bs-toggle': "tooltip",
                        'data-bs-placement': "top",
                        title: "Fazer upload de documento" do %>
              <i class="fas fa-upload"></i> Upload
            <% end %>
          </div>
        </div>
        <div class="mt-2">
          <small class="text-muted">
            <strong>Total:</strong> 
            <% begin %>
              <%= Document.where(school: current_user.school).count %> documento(s)
            <% rescue %>
              --- documento(s)
            <% end %>
          </small>
        </div>
      </div>
    </div>
  </div>

  <!-- Relatórios Gerenciais -->
  <div class="col-lg-4 mb-3">
    <div class="card border-success h-100">
      <div class="card-header bg-success text-white">
        <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Relatórios</h6>
      </div>
      <div class="card-body">
        <p class="card-text">Acompanhe indicadores e gere relatórios da escola.</p>
        <div class="row g-2">
          <div class="col-6">
            <%= link_to direction_reports_path, 
                        class: "btn btn-sm btn-outline-success w-100",
                        'data-bs-toggle': "tooltip",
                        'data-bs-placement': "top",
                        title: "Ver todos os relatórios" do %>
              <i class="fas fa-chart-line"></i> Relatórios
            <% end %>
          </div>
          <div class="col-6">
            <%= link_to generate_pdf_direction_reports_path(format: :pdf), 
                        class: "btn btn-sm btn-success w-100", 
                        target: "_blank",
                        'data-bs-toggle': "tooltip",
                        'data-bs-placement': "top",
                        title: "Gerar relatório em PDF" do %>
              <i class="fas fa-file-pdf"></i> PDF
            <% end %>
          </div>
        </div>
        <div class="mt-2">
          <small class="text-muted">
            <strong>Frequência:</strong> <%= @attendance_rate %>% | 
            <strong>Média:</strong> <%= @average_grade %>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Próximos Eventos -->
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        <h5><i class="fas fa-calendar"></i> Próximos Eventos</h5>
        <%= link_to direction_events_path, class: "btn btn-sm btn-outline-primary" do %>
          <i class="fas fa-eye"></i> Ver todos
        <% end %>
      </div>
      <div class="card-body">
        <% if @upcoming_events.any? %>
          <% @upcoming_events.limit(3).each do |event| %>
            <div class="d-flex align-items-center mb-2">
              <div class="bg-primary rounded-circle me-2 p-2">
                <i class="fas fa-calendar text-white"></i>
              </div>
              <div class="flex-grow-1">
                <strong><%= event.title %></strong>
                <br>
                <small class="text-muted">
                  <%= event.formatted_start_date %>
                  <% if event.end_date != event.start_date %>
                    até <%= event.formatted_end_date %>
                  <% end %>
                </small>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted text-center">Nenhum evento próximo</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Gráficos e Relatórios -->
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        <h5><i class="fas fa-chart-bar"></i> Relatórios Gerais</h5>
        <%= link_to direction_reports_path, class: "btn btn-primary" do %>
          <i class="fas fa-file-alt"></i> Ver Todos os Relatórios
        <% end %>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-md-3">
            <div class="border-end">
              <h4 class="text-primary"><%= @attendance_rate %>%</h4>
              <small class="text-muted">Taxa de Frequência</small>
            </div>
          </div>
          <div class="col-md-4">
            <div class="border-end">
              <h4 class="text-success"><%= @average_grade %></h4>
              <small class="text-muted">Média Geral</small>
            </div>
          </div>
          <div class="col-md-4">
            <div class="border-end">
              <h4 class="text-warning"><%= @total_messages %></h4>
              <small class="text-muted">Mensagens Enviadas</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.card.border-primary:hover,
.card.border-info:hover,
.card.border-success:hover {
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  transition: box-shadow 0.3s ease;
}

.hover-shadow:hover {
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  transition: box-shadow 0.3s ease;
}

.card-stat:hover {
  transform: translateY(-2px);
  transition: transform 0.3s ease;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Inicializar tooltips
  var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
  var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
    return new bootstrap.Tooltip(tooltipTriggerEl);
  });

  // Adicionar listeners para debugging dos cliques
  const eventButtons = document.querySelectorAll('a[href*="/direction/events"]');
  const documentButtons = document.querySelectorAll('a[href*="/direction/documents"]');
  const reportButtons = document.querySelectorAll('a[href*="/direction/reports"]');
  
  eventButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      console.log('Clique no botão de eventos:', this.href);
    });
  });
  
  documentButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      console.log('Clique no botão de documentos:', this.href);
    });
  });
  
  reportButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      console.log('Clique no botão de relatórios:', this.href);
    });
  });
});
</script>

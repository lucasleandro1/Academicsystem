<% content_for :title, "Gerenciar Matrículas" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
          <i class="fas fa-clipboard-check text-primary"></i>
          Gerenciar Matrículas
        </h1>
        <%= link_to "Nova Matrícula", new_direction_enrollment_path, 
            class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <!-- Filtros -->
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-filter"></i>
            Filtros
          </h5>
        </div>
        <div class="card-body">
          <%= form_with url: direction_enrollments_path, method: :get, local: true, class: "row g-3" do |form| %>
            <div class="col-md-3">
              <%= form.select :status, 
                  options_for_select([
                    ["Todas", ""],
                    ["Pendentes", "pending"],
                    ["Aprovadas", "approved"],
                    ["Rejeitadas", "rejected"]
                  ], params[:status]), 
                  {}, 
                  { class: "form-select" } %>
            </div>
            <div class="col-md-3">
              <%= form.select :classroom_id, 
                  options_from_collection_for_select(
                    current_user.school.classrooms.order(:name), 
                    :id, :name, params[:classroom_id]
                  ), 
                  { prompt: "Todas as turmas" }, 
                  { class: "form-select" } %>
            </div>
            <div class="col-md-3">
              <%= form.text_field :search, 
                  placeholder: "Buscar por nome do aluno...", 
                  value: params[:search],
                  class: "form-control" %>
            </div>
            <div class="col-md-3">
              <%= form.submit "Filtrar", class: "btn btn-outline-primary" %>
              <%= link_to "Limpar", direction_enrollments_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Estatísticas -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card text-white bg-warning">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h4 class="card-title"><%= @enrollments.where(status: :pending).count %></h4>
              <p class="card-text">Pendentes</p>
            </div>
            <div class="align-self-center">
              <i class="fas fa-clock fa-2x"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-white bg-success">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h4 class="card-title"><%= @enrollments.where(status: :approved).count %></h4>
              <p class="card-text">Aprovadas</p>
            </div>
            <div class="align-self-center">
              <i class="fas fa-check fa-2x"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-white bg-danger">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h4 class="card-title"><%= @enrollments.where(status: :rejected).count %></h4>
              <p class="card-text">Rejeitadas</p>
            </div>
            <div class="align-self-center">
              <i class="fas fa-times fa-2x"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-white bg-info">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h4 class="card-title"><%= @enrollments.count %></h4>
              <p class="card-text">Total</p>
            </div>
            <div class="align-self-center">
              <i class="fas fa-users fa-2x"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Lista de Matrículas -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-list"></i>
            Matrículas
          </h5>
        </div>
        <div class="card-body">
          <% if @enrollments.any? %>
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>Aluno</th>
                    <th>Turma</th>
                    <th>Data da Solicitação</th>
                    <th>Status</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% @enrollments.each do |enrollment| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <div class="avatar-sm me-3">
                            <div class="avatar-title bg-primary rounded-circle">
                              <%= enrollment.user.name.first.upcase %>
                            </div>
                          </div>
                          <div>
                            <strong><%= enrollment.user.name %></strong><br>
                            <small class="text-muted"><%= enrollment.user.email %></small>
                          </div>
                        </div>
                      </td>
                      <td>
                        <strong><%= enrollment.classroom.name %></strong><br>
                        <small class="text-muted"><%= enrollment.classroom.year %></small>
                      </td>
                      <td>
                        <%= enrollment.created_at.strftime("%d/%m/%Y às %H:%M") %>
                      </td>
                      <td>
                        <% case enrollment.status %>
                        <% when 'pending' %>
                          <span class="badge bg-warning">Pendente</span>
                        <% when 'approved' %>
                          <span class="badge bg-success">Aprovada</span>
                        <% when 'rejected' %>
                          <span class="badge bg-danger">Rejeitada</span>
                        <% end %>
                      </td>
                      <td>
                        <div class="btn-group" role="group">
                          <% if enrollment.pending? %>
                            <%= link_to approve_direction_enrollment_path(enrollment), 
                                method: :patch,
                                class: "btn btn-sm btn-success",
                                title: "Aprovar",
                                data: { 
                                  confirm: "Tem certeza que deseja aprovar esta matrícula?" 
                                } do %>
                              <i class="fas fa-check"></i>
                            <% end %>
                            <%= link_to reject_direction_enrollment_path(enrollment), 
                                method: :patch,
                                class: "btn btn-sm btn-danger",
                                title: "Rejeitar",
                                data: { 
                                  confirm: "Tem certeza que deseja rejeitar esta matrícula?" 
                                } do %>
                              <i class="fas fa-times"></i>
                            <% end %>
                          <% end %>
                          
                          <%= link_to direction_enrollment_path(enrollment), 
                              class: "btn btn-sm btn-outline-primary",
                              title: "Visualizar" do %>
                            <i class="fas fa-eye"></i>
                          <% end %>
                          
                          <%= link_to direction_enrollment_path(enrollment), 
                              method: :delete,
                              class: "btn btn-sm btn-outline-danger",
                              title: "Excluir",
                              data: { 
                                confirm: "Tem certeza que deseja excluir esta matrícula?" 
                              } do %>
                            <i class="fas fa-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            
            <% if @enrollments.respond_to?(:current_page) %>
              <div class="d-flex justify-content-center mt-3">
                <%= paginate @enrollments %>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-5">
              <i class="fas fa-clipboard-check fa-3x text-muted mb-3"></i>
              <h4 class="text-muted">Nenhuma matrícula encontrada</h4>
              <p class="text-muted">
                <% if params[:search].present? || params[:status].present? || params[:classroom_id].present? %>
                  Tente ajustar os filtros ou 
                  <%= link_to "limpar filtros", direction_enrollments_path, class: "text-decoration-none" %>.
                <% else %>
                  Quando houver solicitações de matrícula, elas aparecerão aqui.
                <% end %>
              </p>
              <%= link_to "Nova Matrícula", new_direction_enrollment_path, 
                  class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.avatar-sm {
  width: 40px;
  height: 40px;
}

.avatar-title {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}
</style>

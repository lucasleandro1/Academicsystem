<% content_for :title, "Documentos" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-folder"></i> Gerenciar Documentos</h1>
  <%= link_to new_direction_document_path, class: "btn btn-primary" do %>
    <i class="fas fa-plus"></i> Novo Documento
  <% end %>
</div>

<!-- Filtros e Busca -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: direction_documents_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-4">
        <%= form.text_field :search, placeholder: "Buscar por título ou descrição...", 
                           value: params[:search], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.select :document_type, 
                        options_for_select([['Todos os tipos', '']] + @document_types.map { |type| [type.humanize, type] }, params[:document_type]),
                        {}, { class: "form-select" } %>
      </div>
      <div class="col-md-3">
        <%= form.select :user_type, 
                        options_for_select([
                          ['Todos os usuários', ''],
                          ['Documentos da Direção', 'direction'],
                          ['Documentos de Professores', 'teacher'],
                          ['Documentos de Alunos', 'student']
                        ], params[:user_type]),
                        {}, { class: "form-select" } %>
      </div>
      <div class="col-md-2">
        <%= form.submit "Filtrar", class: "btn btn-outline-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Lista de Documentos -->
<div class="card">
  <div class="card-header">
    <h5><i class="fas fa-list"></i> Documentos da Escola</h5>
  </div>
  <div class="card-body">
    <% if @documents.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Título</th>
              <th>Tipo</th>
              <th>Criado por</th>
              <th>Data</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @documents.each do |document| %>
              <tr>
                <td>
                  <div>
                    <strong><%= document.title %></strong>
                    <% if document.attachment.attached? %>
                      <i class="fas fa-paperclip text-success ms-1" title="Arquivo anexado"></i>
                    <% end %>
                    <% if document.description.present? %>
                      <br><small class="text-muted"><%= truncate(document.description, length: 50) %></small>
                    <% end %>
                  </div>
                </td>
                <td>
                  <span class="badge bg-info"><%= document.document_type&.humanize || 'Não definido' %></span>
                </td>
                <td>
                  <div>
                    <%= document.user.full_name %>
                    <br><small class="text-muted"><%= document.user.user_type.humanize %></small>
                  </div>
                </td>
                <td>
                  <%= document.created_at.strftime("%d/%m/%Y") %>
                  <br><small class="text-muted"><%= document.created_at.strftime("%H:%M") %></small>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to direction_document_path(document), class: "btn btn-sm btn-outline-primary", title: "Visualizar" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <% if document.attachment.attached? %>
                      <%= link_to rails_blob_path(document.attachment, disposition: "attachment"), 
                                  class: "btn btn-sm btn-outline-success", target: "_blank", title: "Baixar arquivo" do %>
                        <i class="fas fa-download"></i>
                      <% end %>
                    <% end %>
                    <%= link_to edit_direction_document_path(document), class: "btn btn-sm btn-outline-warning", title: "Editar" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to direction_document_path(document), method: :delete, 
                               class: "btn btn-sm btn-outline-danger", title: "Excluir",
                               confirm: "Tem certeza que deseja excluir este documento?" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Paginação -->
      <div class="d-flex justify-content-center mt-3">
        <%= paginate @documents if respond_to?(:paginate) %>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Nenhum documento encontrado</h5>
        <p class="text-muted">
          <% if params[:search].present? || params[:document_type].present? || params[:user_type].present? %>
            Tente ajustar os filtros de busca.
          <% else %>
            Adicione o primeiro documento da escola.
          <% end %>
        </p>
        <%= link_to new_direction_document_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus"></i> Adicionar Documento
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Estatísticas -->
<div class="row mt-4">
  <div class="col-md-4">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-primary"><%= @documents.count %></h4>
        <small class="text-muted">Total de Documentos</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-info"><%= @document_types.count %></h4>
        <small class="text-muted">Tipos de Documentos</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-warning"><%= @documents.where(user_id: current_user.id).count %></h4>
        <small class="text-muted">Meus Documentos</small>
      </div>
    </div>
  </div>
</div>

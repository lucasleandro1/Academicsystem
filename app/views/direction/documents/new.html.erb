<% content_for :title, "Novo Documento" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-plus"></i> Adicionar Novo Documento</h1>
  <%= link_to direction_documents_path, class: "btn btn-outline-secondary" do %>
    <i class="fas fa-arrow-left"></i> Voltar
  <% end %>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-file"></i> Dados do Documento</h5>
      </div>
      <div class="card-body">
        <%= form_with model: [@document], url: direction_documents_path, local: true do |form| %>
          <% if @document.errors.any? %>
            <div class="alert alert-danger">
              <h6><i class="fas fa-exclamation-triangle"></i> Corrija os seguintes erros:</h6>
              <ul class="mb-0">
                <% @document.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Informações Básicas -->
          <div class="mb-4">
            <h6 class="text-muted border-bottom pb-2">Informações Básicas</h6>
            
            <div class="mb-3">
              <%= form.label :title, "Título do Documento", class: "form-label" %>
              <%= form.text_field :title, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :description, "Descrição", class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 3 %>
              <div class="form-text">Descrição opcional do documento</div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :document_type, "Tipo de Documento", class: "form-label" %>
                <%= form.select :document_type, 
                               options_for_select([
                                 ['Regulamento', 'regulamento'],
                                 ['Circular', 'circular'],
                                 ['Comunicado', 'comunicado'],
                                 ['Ata', 'ata'],
                                 ['Relatório', 'relatorio'],
                                 ['Projeto', 'projeto'],
                                 ['Plano de Ensino', 'plano_ensino'],
                                 ['Manual', 'manual'],
                                 ['Boletim', 'boletim'],
                                 ['Histórico', 'historico'],
                                 ['Certificado', 'certificado'],
                                 ['Declaração', 'declaracao'],
                                 ['Outros', 'outros']
                               ]), 
                               { prompt: "Selecione o tipo" }, 
                               { class: "form-select" } %>
              </div>
            </div>
          </div>

          <!-- Compartilhamento -->
          <div class="mb-4">
            <h6 class="text-muted border-bottom pb-2">Opções de Compartilhamento</h6>
            
            <div class="mb-3">
              <%= form.label :sharing_type, "Compartilhar com", class: "form-label" %>
              <%= form.select :sharing_type, [
                ['Toda a escola', 'all_students'],
                ['Turma específica', 'specific_classroom'],
                ['Professor específico', 'specific_user'],
                ['Aluno específico', 'specific_user']
              ], { selected: @document.sharing_type || 'all_students' }, { class: "form-select", id: "sharing_type_select" } %>
              <small class="form-text text-muted">Escolha com quem deseja compartilhar este documento</small>
            </div>

            <div class="mb-3" id="classroom_select_div" style="display: none;">
              <%= form.label :classroom_id, "Selecionar Turma", class: "form-label" %>
              <%= form.select :classroom_id, 
                  options_from_collection_for_select(@classrooms || [], :id, :name), 
                  { prompt: "Escolha uma turma" }, 
                  { class: "form-select" } %>
            </div>

            <div class="mb-3" id="user_select_div" style="display: <%= @target_user ? 'block' : 'none' %>;">
              <%= form.label :target_user_id, "Anexar para Usuário", class: "form-label" %>
              
              <div class="row">
                <div class="col-md-6">
                  <label class="form-label">Professores</label>
                  <%= form.select :target_user_id, 
                      options_from_collection_for_select(@teachers || [], :id, :full_name, @target_user&.id), 
                      { prompt: "Escolha um professor" }, 
                      { class: "form-select", id: "teacher_select" } %>
                </div>
                <div class="col-md-6">
                  <label class="form-label">Alunos</label>
                  <%= form.select :target_user_id, 
                      options_from_collection_for_select(@students || [], :id, :full_name, @target_user&.id), 
                      { prompt: "Escolha um aluno" }, 
                      { class: "form-select", id: "student_select" } %>
                </div>
              </div>
              
              <small class="form-text text-muted">Este documento será anexado especificamente para o usuário selecionado</small>
            </div>

            <% if @target_user %>
              <div class="alert alert-info">
                <i class="fas fa-user"></i>
                Anexando documento para: <strong><%= @target_user.full_name %></strong> (<%= @target_user.user_type.humanize %>)
              </div>
            <% end %>
          </div>

          <!-- Upload de Arquivo -->
          <div class="mb-4">
            <h6 class="text-muted border-bottom pb-2">Arquivo</h6>
            
            <div class="mb-3">
              <%= form.label :attachment, "Selecionar Arquivo", class: "form-label" %>
              <%= form.file_field :attachment, class: "form-control", accept: ".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.html,.svg,.json,.pbm" %>
              <div class="form-text">
                Formatos aceitos: PDF, DOC, DOCX, TXT, JPG, JPEG, PNG, HTML, SVG, JSON. Tamanho máximo: 10MB
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-between">
            <%= link_to direction_documents_path, class: "btn btn-secondary" do %>
              <i class="fas fa-times"></i> Cancelar
            <% end %>
            <%= form.submit "Salvar Documento", class: "btn btn-primary" do %>
              <i class="fas fa-save"></i> Salvar Documento
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <!-- Ajuda -->
    <div class="card">
      <div class="card-header">
        <h6><i class="fas fa-info-circle"></i> Informações sobre Documentos</h6>
      </div>
      <div class="card-body">
        <ul class="list-unstyled small">
          <li class="mb-2">
            <i class="fas fa-check text-success"></i>
            Documentos ficam organizados por tipo
          </li>
          <li class="mb-2">
            <i class="fas fa-check text-success"></i>
            Você pode anexar documentos para professores ou alunos específicos
          </li>
          <li class="mb-2">
            <i class="fas fa-check text-success"></i>
            Documentos podem ser compartilhados com toda a escola ou grupos específicos
          </li>
          <li class="mb-2">
            <i class="fas fa-check text-success"></i>
            Histórico de anexação é mantido para auditoria
          </li>
        </ul>
      </div>
    </div>

    <!-- Tipos de Documentos -->
    <div class="card mt-3">
      <div class="card-header">
        <h6><i class="fas fa-list"></i> Tipos de Documentos</h6>
      </div>
      <div class="card-body">
        <div class="small">
          <strong>Regulamento:</strong> Normas e regras da escola<br>
          <strong>Circular:</strong> Comunicações oficiais<br>
          <strong>Comunicado:</strong> Avisos gerais<br>
          <strong>Ata:</strong> Registros de reuniões<br>
          <strong>Boletim:</strong> Boletins escolares individuais<br>
          <strong>Histórico:</strong> Históricos escolares<br>
          <strong>Certificado:</strong> Certificados e diplomas<br>
          <strong>Declaração:</strong> Declarações diversas<br>
        </div>
      </div>
    </div>

    <!-- Compartilhamento -->
    <div class="card mt-3">
      <div class="card-header">
        <h6><i class="fas fa-share-alt"></i> Opções de Compartilhamento</h6>
      </div>
      <div class="card-body">
        <div class="small">
          <strong>Toda a escola:</strong> Visível para todos os usuários<br>
          <strong>Turma específica:</strong> Apenas para alunos da turma<br>
          <strong>Professor específico:</strong> Anexar para um professor<br>
          <strong>Aluno específico:</strong> Anexar para um aluno (ex: boletim)<br>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sharingTypeSelect = document.getElementById('sharing_type_select');
  const classroomDiv = document.getElementById('classroom_select_div');
  const userDiv = document.getElementById('user_select_div');
  const teacherSelect = document.getElementById('teacher_select');
  const studentSelect = document.getElementById('student_select');

  function toggleFields() {
    const selectedValue = sharingTypeSelect.value;
    
    // Esconder todos os campos primeiro
    classroomDiv.style.display = 'none';
    userDiv.style.display = 'none';
    
    // Mostrar o campo relevante
    if (selectedValue === 'specific_classroom') {
      classroomDiv.style.display = 'block';
    } else if (selectedValue === 'specific_user') {
      userDiv.style.display = 'block';
    }
  }

  // Sincronizar seleção entre professores e alunos
  teacherSelect.addEventListener('change', function() {
    if (this.value) {
      studentSelect.value = '';
    }
  });

  studentSelect.addEventListener('change', function() {
    if (this.value) {
      teacherSelect.value = '';
    }
  });

  sharingTypeSelect.addEventListener('change', toggleFields);
  toggleFields(); // Executar na inicialização
});
</script>

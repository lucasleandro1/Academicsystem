<% content_for :title, "Editar Documento" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><i class="fas fa-edit"></i> Editar Documento</h1>
    <p class="text-muted mb-0">Atualize as informações do documento</p>
  </div>
  <div class="btn-group">
    <%= link_to direction_document_path(@document), class: "btn btn-outline-secondary" do %>
      <i class="fas fa-arrow-left"></i> Voltar
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-file-alt"></i> Informações do Documento</h5>
      </div>
      <div class="card-body">
        <%= form_with model: [:direction, @document], local: true, class: "needs-validation", novalidate: true do |form| %>
          <% if @document.errors.any? %>
            <div class="alert alert-danger">
              <h5><i class="fas fa-exclamation-circle"></i> Erro ao salvar o documento:</h5>
              <ul class="mb-0">
                <% @document.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-12 mb-3">
              <%= form.label :title, "Título do Documento", class: "form-label required" %>
              <%= form.text_field :title, class: "form-control", required: true, 
                                 placeholder: "Ex: Regimento Interno, Manual do Aluno, etc." %>
              <div class="invalid-feedback">
                Por favor, informe o título do documento.
              </div>
            </div>

            <div class="col-12 mb-3">
              <%= form.label :description, "Descrição", class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 4,
                                placeholder: "Descreva o conteúdo e finalidade do documento..." %>
              <div class="form-text">
                Opcional. Forneça mais detalhes sobre o documento para facilitar sua localização.
              </div>
            </div>

            <% if @document.respond_to?(:document_type) %>
            <div class="col-md-6 mb-3">
              <%= form.label :document_type, "Tipo de Documento", class: "form-label" %>
              <%= form.select :document_type, 
                              options_for_select([
                                ['Selecionar tipo...', ''],
                                ['Regulamento', 'regulamento'],
                                ['Circular', 'circular'],
                                ['Comunicado', 'comunicado'],
                                ['Ata', 'ata'],
                                ['Relatório', 'relatorio'],
                                ['Projeto', 'projeto'],
                                ['Plano de Ensino', 'plano_ensino'],
                                ['Manual', 'manual'],
                                ['Boletim', 'boletim'],
                                ['Histórico', 'historico'],
                                ['Certificado', 'certificado'],
                                ['Declaração', 'declaracao'],
                                ['Outros', 'outros']
                              ], @document.document_type),
                              {}, { class: "form-select" } %>
              <div class="form-text">
                Categorize o documento para facilitar a organização.
              </div>
            </div>
            <% end %>

            <!-- Compartilhamento -->
            <div class="col-12 mb-4">
              <h6 class="text-muted border-bottom pb-2">Opções de Compartilhamento</h6>
              
              <div class="mb-3">
                <%= form.label :sharing_type, "Compartilhar com", class: "form-label" %>
                <%= form.select :sharing_type, [
                  ['Toda a escola', 'all_students'],
                  ['Turma específica', 'specific_classroom'],
                  ['Professor específico', 'specific_user'],
                  ['Aluno específico', 'specific_user']
                ], { selected: @document.sharing_type || 'all_students' }, { class: "form-select", id: "sharing_type_select" } %>
                <small class="form-text text-muted">Escolha com quem deseja compartilhar este documento</small>
              </div>

              <div class="mb-3" id="classroom_select_div" style="display: <%= @document.sharing_type == 'specific_classroom' ? 'block' : 'none' %>;">
                <%= form.label :classroom_id, "Selecionar Turma", class: "form-label" %>
                <%= form.select :classroom_id, 
                    options_from_collection_for_select(@classrooms || [], :id, :name, @document.classroom_id), 
                    { prompt: "Escolha uma turma" }, 
                    { class: "form-select" } %>
              </div>

              <div class="mb-3" id="user_select_div" style="display: <%= @document.sharing_type == 'specific_user' ? 'block' : 'none' %>;">
                <%= form.label :target_user_id, "Anexar para Usuário", class: "form-label" %>
                
                <div class="row">
                  <div class="col-md-6">
                    <label class="form-label">Professores</label>
                    <%= form.select :target_user_id, 
                        options_from_collection_for_select(@teachers || [], :id, :full_name, 
                        (@document.recipient&.teacher? ? @document.recipient_id : nil)), 
                        { prompt: "Escolha um professor" }, 
                        { class: "form-select", id: "teacher_select" } %>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Alunos</label>
                    <%= form.select :target_user_id, 
                        options_from_collection_for_select(@students || [], :id, :full_name, 
                        (@document.recipient&.student? ? @document.recipient_id : nil)), 
                        { prompt: "Escolha um aluno" }, 
                        { class: "form-select", id: "student_select" } %>
                  </div>
                </div>
                
                <small class="form-text text-muted">Este documento será anexado especificamente para o usuário selecionado</small>
              </div>

              <% if @document.recipient %>
                <div class="alert alert-info">
                  <i class="fas fa-user"></i>
                  Anexado para: <strong><%= @document.recipient.full_name %></strong> (<%= @document.recipient.user_type.humanize %>)
                </div>
              <% end %>
            </div>

            <% if @document.respond_to?(:file) %>
            <div class="col-12 mb-3">
              <%= form.label :file, "Arquivo", class: "form-label" %>
              
              <% if @document.attachment.attached? %>
                <div class="alert alert-info mb-2">
                  <i class="fas fa-info-circle"></i>
                  <strong>Arquivo atual:</strong> 
                  <%= @document.attachment.filename %>
                  (<%= number_to_human_size(@document.attachment.byte_size) %>)
                </div>
              <% end %>
              
              <%= form.file_field :attachment, class: "form-control", accept: ".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.html,.svg,.json,.pbm" %>
              <div class="form-text">
                Formatos aceitos: PDF, DOC, DOCX, TXT, JPG, PNG, HTML, SVG, JSON. Tamanho máximo: 10MB.
                <% if @document.attachment.attached? %>
                  <br><strong>Nota:</strong> Selecione um novo arquivo apenas se quiser substituir o atual.
                <% end %>
              </div>
            </div>
            <% end %>
          </div>

          <hr>

          <div class="d-flex justify-content-between">
            <div>
              <%= link_to direction_document_path(@document), class: "btn btn-outline-secondary" do %>
                <i class="fas fa-times"></i> Cancelar
              <% end %>
            </div>
            <div>
              <%= form.submit "Atualizar Documento", class: "btn btn-primary" do %>
                <i class="fas fa-save"></i> Atualizar Documento
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <% if @document.respond_to?(:file) && @document.file.present? %>
    <div class="card mt-3">
      <div class="card-header">
        <h5><i class="fas fa-file"></i> Arquivo Atual</h5>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <strong>
              <% if @document.file.respond_to?(:filename) %>
                <%= @document.file.filename %>
              <% else %>
                Arquivo anexado
              <% end %>
            </strong><br>
            <small class="text-muted">
              <% if @document.file.respond_to?(:byte_size) %>
                Tamanho: <%= number_to_human_size(@document.file.byte_size) %>
              <% end %>
              <br>Anexado em: <%= @document.created_at.strftime("%d/%m/%Y") %>
            </small>
          </div>
          <div>
            <%= link_to download_direction_document_path(@document), 
                        class: "btn btn-outline-primary", target: "_blank" do %>
              <i class="fas fa-download"></i> Baixar
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<script>
// Validação de formulário Bootstrap
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();

// Validação de tamanho de arquivo
document.addEventListener('DOMContentLoaded', function() {
  const fileInput = document.querySelector('input[type="file"]');
  if (fileInput) {
    fileInput.addEventListener('change', function() {
      const maxSize = 10 * 1024 * 1024; // 10MB
      if (this.files[0] && this.files[0].size > maxSize) {
        alert('O arquivo selecionado é muito grande. O tamanho máximo permitido é 10MB.');
        this.value = '';
      }
    });
  }

  // Controle de compartilhamento
  const sharingTypeSelect = document.getElementById('sharing_type_select');
  const classroomDiv = document.getElementById('classroom_select_div');
  const userDiv = document.getElementById('user_select_div');
  const teacherSelect = document.getElementById('teacher_select');
  const studentSelect = document.getElementById('student_select');

  function toggleFields() {
    const selectedValue = sharingTypeSelect.value;
    
    // Esconder todos os campos primeiro
    classroomDiv.style.display = 'none';
    userDiv.style.display = 'none';
    
    // Mostrar o campo relevante
    if (selectedValue === 'specific_classroom') {
      classroomDiv.style.display = 'block';
    } else if (selectedValue === 'specific_user') {
      userDiv.style.display = 'block';
    }
  }

  // Sincronizar seleção entre professores e alunos
  if (teacherSelect && studentSelect) {
    teacherSelect.addEventListener('change', function() {
      if (this.value) {
        studentSelect.value = '';
      }
    });

    studentSelect.addEventListener('change', function() {
      if (this.value) {
        teacherSelect.value = '';
      }
    });
  }

  if (sharingTypeSelect) {
    sharingTypeSelect.addEventListener('change', toggleFields);
    toggleFields(); // Executar na inicialização
  }
});
</script>

<style>
.required::after {
  content: " *";
  color: red;
}
</style>
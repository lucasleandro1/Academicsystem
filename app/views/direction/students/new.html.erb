<% content_for :title, "Novo Aluno" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-user-plus"></i> Cadastrar Novo Aluno</h1>
  <%= link_to direction_students_path, class: "btn btn-outline-secondary" do %>
    <i class="fas fa-arrow-left"></i> Voltar
  <% end %>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-user"></i> Dados do Aluno</h5>
      </div>
      <div class="card-body">
        <%= form_with model: [@user], url: direction_students_path, local: true do |form| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <h6><i class="fas fa-exclamation-triangle"></i> Corrija os seguintes erros:</h6>
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Dados Pessoais -->
          <div class="mb-4">
            <h6 class="text-muted border-bottom pb-2">Dados Pessoais</h6>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :first_name, "Nome", class: "form-label" %>
                <%= form.text_field :first_name, class: "form-control", required: true %>
              </div>
              <div class="col-md-6 mb-3">
                <%= form.label :last_name, "Sobrenome", class: "form-label" %>
                <%= form.text_field :last_name, class: "form-control", required: true %>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :email, "E-mail", class: "form-label" %>
                <%= form.email_field :email, class: "form-control", required: true %>
              </div>
              <div class="col-md-6 mb-3">
                <%= form.label :phone, "Telefone", class: "form-label" %>
                <%= form.telephone_field :phone, class: "form-control" %>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :birth_date, "Data de Nascimento", class: "form-label" %>
                <%= form.date_field :birth_date, class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :guardian_name, "Nome do Responsável", class: "form-label" %>
                <%= form.text_field :guardian_name, class: "form-control" %>
              </div>
              <div class="col-md-6 mb-3">
                <%= form.label :guardian_phone, "Telefone do Responsável", class: "form-label" %>
                <%= form.telephone_field :guardian_phone, class: "form-control" %>
              </div>
            </div>
          </div>

          <!-- Dados de Acesso -->
          <div class="mb-4">
            <h6 class="text-muted border-bottom pb-2">Dados de Acesso</h6>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :password, "Senha", class: "form-label" %>
                <%= form.password_field :password, class: "form-control", required: true %>
              </div>
              <div class="col-md-6 mb-3">
                <%= form.label :password_confirmation, "Confirmar Senha", class: "form-label" %>
                <%= form.password_field :password_confirmation, class: "form-control", required: true %>
              </div>
            </div>
          </div>

          <!-- Turma -->
          <div class="mb-4">
            <h6 class="text-muted border-bottom pb-2">Matrícula</h6>
            
            <div class="mb-3">
              <%= form.label :classroom_id, "Turma", class: "form-label" %>
              <%= form.select :classroom_id, 
                             options_from_collection_for_select(@classrooms, :id, :name), 
                             { prompt: "Selecione uma turma (opcional)" }, 
                             { class: "form-select" } %>
              <div class="form-text">Você pode atribuir o aluno a uma turma posteriormente.</div>
            </div>
          </div>

          <div class="d-flex justify-content-between">
            <%= link_to direction_students_path, class: "btn btn-secondary" do %>
              <i class="fas fa-times"></i> Cancelar
            <% end %>
            <%= form.submit "Cadastrar Aluno", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <!-- Ajuda -->
    <div class="card">
      <div class="card-header">
        <h6><i class="fas fa-info-circle"></i> Informações Importantes</h6>
      </div>
      <div class="card-body">
        <ul class="list-unstyled small">
          <li class="mb-2">
            <i class="fas fa-check text-success"></i>
            O aluno receberá um e-mail com as credenciais de acesso
          </li>
          <li class="mb-2">
            <i class="fas fa-check text-success"></i>
            Após o cadastro, você poderá matricular o aluno em turmas
          </li>
          <li class="mb-2">
            <i class="fas fa-check text-success"></i>
            O aluno poderá alterar a senha no primeiro acesso
          </li>
          <li class="mb-2">
            <i class="fas fa-check text-success"></i>
            Todos os campos podem ser editados posteriormente
          </li>
        </ul>
      </div>
    </div>

    <!-- Próximos Passos -->
    <div class="card mt-3">
      <div class="card-header">
        <h6><i class="fas fa-list-ol"></i> Próximos Passos</h6>
      </div>
      <div class="card-body">
        <ol class="small">
          <li>Cadastrar o aluno</li>
          <li>Matricular em turma</li>
          <li>Verificar horários</li>
          <li>Configurar responsáveis</li>
          <li>Enviar credenciais por e-mail</li>
        </ol>
      </div>
    </div>
  </div>
</div>
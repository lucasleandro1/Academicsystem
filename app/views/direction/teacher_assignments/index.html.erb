<% content_for :title, "Atribuição de Professores" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>
    <i class="fas fa-user-tie text-primary me-2"></i>
    Atribuição de Professores às Disciplinas
  </h1>
  <div class="btn-group">
    <%= link_to direction_teachers_path, class: "btn btn-outline-secondary" do %>
      <i class="fas fa-users"></i> Gerenciar Professores
    <% end %>
    <%= link_to direction_subjects_path, class: "btn btn-outline-primary" do %>
      <i class="fas fa-book"></i> Gerenciar Disciplinas
    <% end %>
  </div>
</div>

<!-- Alert Cards -->
<div class="row mb-4">
  <div class="col-md-6">
    <% if @unassigned_teachers.any? %>
      <div class="alert alert-warning" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Atenção:</strong> <%= @unassigned_teachers.count %> professor(es) sem disciplinas atribuídas.
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <% if @unassigned_subjects.any? %>
      <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        <strong>Urgente:</strong> <%= @unassigned_subjects.count %> disciplina(s) sem professor.
      </div>
    <% end %>
  </div>
</div>

<!-- Statistics -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h3 class="text-primary"><%= @teachers.count %></h3>
        <small class="text-muted">Total de Professores</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h3 class="text-success"><%= @teachers.count - @unassigned_teachers.count %></h3>
        <small class="text-muted">Com Disciplinas</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h3 class="text-warning"><%= @unassigned_teachers.count %></h3>
        <small class="text-muted">Sem Disciplinas</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h3 class="text-danger"><%= @unassigned_subjects.count %></h3>
        <small class="text-muted">Disciplinas Vagas</small>
      </div>
    </div>
  </div>
</div>

<!-- Bulk Assignment Form -->
<div class="card shadow mb-4">
  <div class="card-header">
    <h6 class="m-0 font-weight-bold text-primary">
      <i class="fas fa-tasks me-2"></i>Atribuição em Massa
    </h6>
  </div>
  <div class="card-body">
    <%= form_with url: bulk_assign_direction_teacher_assignments_path, method: :patch, local: true do |form| %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Turma</th>
              <th>Disciplina</th>
              <th>Professor Atual</th>
              <th>Novo Professor</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @classrooms.each do |classroom| %>
              <% classroom.subjects.each do |subject| %>
                <tr class="<%= 'table-warning' unless subject.user %>">
                  <td>
                    <strong><%= classroom.name %></strong>
                    <br><small class="text-muted"><%= classroom.shift.humanize %> - <%= classroom.level.humanize %></small>
                  </td>
                  <td>
                    <strong><%= subject.name %></strong>
                    <% if subject.description.present? %>
                      <br><small class="text-muted"><%= truncate(subject.description, length: 50) %></small>
                    <% end %>
                  </td>
                  <td>
                    <% if subject.user %>
                      <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center me-2" style="width: 30px; height: 30px;">
                          <%= subject.user.full_name.first.upcase %>
                        </div>
                        <div>
                          <div class="font-weight-medium"><%= subject.user.full_name %></div>
                          <small class="text-muted"><%= subject.user.email %></small>
                        </div>
                      </div>
                    <% else %>
                      <span class="badge bg-warning">Sem Professor</span>
                    <% end %>
                  </td>
                  <td>
                    <%= form.select "assignments[#{subject.id}]", 
                        options_from_collection_for_select(@teachers, :id, :full_name, subject.user_id),
                        { 
                          prompt: "Selecionar professor...",
                          include_blank: subject.user ? "Remover atribuição" : false
                        },
                        { class: "form-select form-select-sm" } %>
                  </td>
                  <td>
                    <% if subject.user %>
                      <%= link_to remove_assignment_direction_teacher_assignments_path(subject_id: subject.id),
                          method: :patch,
                          class: "btn btn-sm btn-outline-danger",
                          confirm: "Tem certeza que deseja remover #{subject.user.full_name} desta disciplina?",
                          title: "Remover Professor" do %>
                        <i class="fas fa-times"></i>
                      <% end %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="text-muted">
          <i class="fas fa-info-circle me-1"></i>
          Selecione os professores para cada disciplina e clique em "Aplicar Alterações"
        </div>
        <%= form.submit "Aplicar Alterações", class: "btn btn-primary" do %>
          <i class="fas fa-save me-1"></i>Aplicar Alterações
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Teachers without Subjects -->
<% if @unassigned_teachers.any? %>
  <div class="card shadow mb-4">
    <div class="card-header">
      <h6 class="m-0 font-weight-bold text-warning">
        <i class="fas fa-user-slash me-2"></i>Professores sem Disciplinas Atribuídas
      </h6>
    </div>
    <div class="card-body">
      <div class="row">
        <% @unassigned_teachers.each do |teacher| %>
          <div class="col-md-6 mb-3">
            <div class="card border-left-warning">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="rounded-circle bg-warning text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                    <%= teacher.full_name.first.upcase %>
                  </div>
                  <div class="flex-grow-1">
                    <h6 class="mb-0"><%= teacher.full_name %></h6>
                    <small class="text-muted">
                      <%= teacher.specialization if teacher.specialization.present? %>
                    </small>
                  </div>
                  <div>
                    <%= link_to direction_teacher_path(teacher), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Quick Assignment Section -->
<% if @unassigned_subjects.any? %>
  <div class="card shadow">
    <div class="card-header">
      <h6 class="m-0 font-weight-bold text-danger">
        <i class="fas fa-book-open me-2"></i>Disciplinas sem Professor (Urgente)
      </h6>
    </div>
    <div class="card-body">
      <% @unassigned_subjects.each do |subject| %>
        <div class="card border-left-danger mb-3">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-md-4">
                <h6 class="mb-1"><%= subject.name %></h6>
                <small class="text-muted">
                  Turma: <%= subject.classroom.name %> 
                  (<%= subject.classroom.shift.humanize %>)
                </small>
              </div>
              <div class="col-md-6">
                <%= form_with url: assign_teacher_direction_teacher_assignments_path, method: :patch, local: true, class: "d-flex" do |form| %>
                  <%= form.hidden_field :subject_id, value: subject.id %>
                  <%= form.select :teacher_id, 
                      options_from_collection_for_select(@teachers, :id, :full_name),
                      { prompt: "Selecionar professor..." },
                      { class: "form-select me-2" } %>
                  <%= form.submit "Atribuir", class: "btn btn-sm btn-success" %>
                <% end %>
              </div>
              <div class="col-md-2 text-end">
                <%= link_to direction_subject_path(subject), class: "btn btn-sm btn-outline-info" do %>
                  <i class="fas fa-eye"></i> Detalhes
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<style>
.border-left-warning {
  border-left: 0.25rem solid #f6c23e !important;
}
.border-left-danger {
  border-left: 0.25rem solid #e74a3b !important;
}
.border-left-primary {
  border-left: 0.25rem solid #4e73df !important;
}
</style>

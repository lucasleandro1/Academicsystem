<% content_for :title, @classroom.name %>

<div class="d-flex justify-content-between align-it          <div class="col-md-6 mb-3">
            <strong>Alunos:</strong><br>
            <div>
              <span class="badge bg-info">
                <%= @classroom.students.count %> alunos
              </span>
            </div>
          </div>4">
  <div>
    <h1><i class="fas fa-door-open"></i> <%= @classroom.name %></h1>
    <small class="text-muted">
      <%= @classroom.level.humanize %> - <%= 
        case @classroom.shift
        when 'morning' then 'Matutino'
        when 'afternoon' then 'Vespertino'  
        when 'evening' then 'Noturno'
        else 'Turno não definido'
        end
      %>
    </small>
  </div>
  
  <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
      <i class="fas fa-cog"></i> Ações
    </button>
    <ul class="dropdown-menu">
      <li>
        <%= link_to edit_direction_classroom_path(@classroom), class: "dropdown-item" do %>
          <i class="fas fa-edit"></i> Editar Turma
        <% end %>
      </li>
      <li>
        <%= link_to "#", class: "dropdown-item", data: { bs_toggle: "modal", bs_target: "#addStudentModal" } do %>
          <i class="fas fa-user-plus"></i> Adicionar Aluno
        <% end %>
      </li>
      <li>
        <%= link_to "#", class: "dropdown-item", data: { bs_toggle: "modal", bs_target: "#subjectModal" } do %>
          <i class="fas fa-book"></i> Atribuir Disciplina
        <% end %>
      </li>
      <li><hr class="dropdown-divider"></li>
      <li>
        <%= link_to direction_classrooms_path, class: "dropdown-item" do %>
          <i class="fas fa-arrow-left"></i> Voltar para Lista
        <% end %>
      </li>
    </ul>
  </div>
</div>

<!-- Informações Gerais -->
<div class="row mb-4">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-info-circle"></i> Informações Gerais</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <strong>Nome:</strong><br>
            <span class="text-muted"><%= @classroom.name %></span>
          </div>
          
          <div class="col-md-6 mb-3">
            <strong>Ano Letivo:</strong><br>
            <span class="text-muted"><%= @classroom.academic_year %></span>
          </div>
          
          <div class="col-md-6 mb-3">
            <strong>Nível:</strong><br>
            <span class="text-muted"><%= @classroom.level.humanize %></span>
          </div>
          
          <div class="col-md-6 mb-3">
            <strong>Turno:</strong><br>
            <span class="badge bg-<%= 
              case @classroom.shift
              when 'morning' then 'warning'
              when 'afternoon' then 'info'
              when 'evening' then 'dark'
              else 'secondary'
              end
            %>">
              <%= 
                case @classroom.shift
                when 'morning' then 'Matutino'
                when 'afternoon' then 'Vespertino'
                when 'evening' then 'Noturno'
                else 'Não definido'
                end
              %>
            </span>
          </div>
          
          <% if @classroom.capacity.present? %>
            <div class="col-md-6 mb-3">
              <strong>Capacidade:</strong><br>
              <span class="text-muted">
                <%= @classroom.students.count %>/<%= @classroom.capacity %> alunos
                <% occupancy = (@classroom.students.count.to_f / @classroom.capacity * 100).round(1) %>
                (<%= occupancy %>% ocupação)
              </span>
              <div class="progress mt-1" style="height: 6px;">
                <div class="progress-bar bg-<%= occupancy > 90 ? 'danger' : occupancy > 70 ? 'warning' : 'success' %>" 
                     style="width: <%= occupancy %>%"></div>
              </div>
            </div>
          <% end %>
          
          <div class="col-md-6 mb-3">
            <strong>Status:</strong><br>
            <span class="badge bg-<%= @classroom.active? ? 'success' : 'secondary' %>">
              <%= @classroom.active? ? 'Ativa' : 'Inativa' %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Estatísticas Rápidas -->
  <div class="col-lg-4">
    <div class="row">
      <div class="col-12 mb-3">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="text-primary"><%= @classroom.students.count %></h3>
            <small class="text-muted">Alunos na Turma</small>
          </div>
        </div>
      </div>
      
      <div class="col-12 mb-3">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="text-success"><%= @classroom.subjects.count %></h3>
            <small class="text-muted">Disciplinas</small>
          </div>
        </div>
      </div>
      
      <div class="col-12 mb-3">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="text-info"><%= @classroom.subjects.joins(:user).distinct.count %></h3>
            <small class="text-muted">Professores</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Horários e Localização -->
<div class="row mb-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-clock"></i> Horários</h5>
      </div>
      <div class="card-body">
        <% if @classroom.start_time && @classroom.end_time %>
          <div class="mb-3">
            <strong>Período das Aulas:</strong><br>
            <span class="text-muted">
              <%= @classroom.start_time.strftime("%H:%M") %> às <%= @classroom.end_time.strftime("%H:%M") %>
            </span>
          </div>
        <% end %>
        
        <% if @classroom.active_days.present? %>
          <div class="mb-3">
            <strong>Dias Ativos:</strong><br>
            <% day_names = { 
              'monday' => 'Segunda', 'tuesday' => 'Terça', 'wednesday' => 'Quarta',
              'thursday' => 'Quinta', 'friday' => 'Sexta', 'saturday' => 'Sábado'
            } %>
            <% @classroom.active_days.each do |day| %>
              <span class="badge bg-primary me-1"><%= day_names[day] %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-map-marker-alt"></i> Localização</h5>
      </div>
      <div class="card-body">
        <% if @classroom.classroom_number.present? %>
          <div class="mb-3">
            <strong>Sala:</strong><br>
            <span class="text-muted"><%= @classroom.classroom_number %></span>
          </div>
        <% end %>
        
        <% if @classroom.building.present? %>
          <div class="mb-3">
            <strong>Prédio/Bloco:</strong><br>
            <span class="text-muted"><%= @classroom.building %></span>
          </div>
        <% end %>
        
        <% if @classroom.location_notes.present? %>
          <div class="mb-3">
            <strong>Observações:</strong><br>
            <span class="text-muted"><%= @classroom.location_notes %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Lista de Alunos -->
<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5><i class="fas fa-users"></i> Alunos da Turma</h5>
    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
      <i class="fas fa-user-plus"></i> Adicionar Aluno
    </button>
  </div>
  <div class="card-body">
    <% if @classroom.students.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Email</th>
              <th>Data de Cadastro</th>
              <th>Status</th>
              <th class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @classroom.students.each do |student| %>
              <tr>
                <td>
                  <strong><%= student.name %></strong>
                </td>
                <td><%= student.email %></td>
                <td><%= student.created_at.strftime("%d/%m/%Y") %></td>
                <td>
                  <span class="badge bg-<%= student.active? ? 'success' : 'secondary' %>">
                    <%= student.active? ? 'Ativo' : 'Inativo' %>
                  </span>
                </td>
                <td class="text-center">
                  <div class="btn-group btn-group-sm">
                    <%= link_to direction_student_path(student), class: "btn btn-outline-primary btn-sm" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= button_to direction_classroom_remove_student_path(@classroom, student), 
                               method: :patch, class: "btn btn-outline-danger btn-sm", 
                               data: { confirm: "Tem certeza que deseja remover este aluno da turma?" } do %>
                      <i class="fas fa-user-times"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-4">
        <i class="fas fa-users fa-3x text-muted mb-3"></i>
        <h6 class="text-muted">Nenhum aluno na turma</h6>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
          <i class="fas fa-user-plus"></i> Adicionar Primeiro Aluno
        </button>
      </div>
    <% end %>
  </div>
</div>

<!-- Lista de Disciplinas -->
<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5><i class="fas fa-books"></i> Disciplinas da Turma</h5>
    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#subjectModal">
      <i class="fas fa-book"></i> Atribuir Disciplina
    </button>
  </div>
  <div class="card-body">
    <% if @classroom.subjects.any? %>
      <div class="row">
        <% @classroom.subjects.each do |subject| %>
          <div class="col-md-4 mb-3">
            <div class="card border-left-primary">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <h6 class="card-title mb-1"><%= subject.name %></h6>
                    <% if subject.code.present? %>
                      <small class="text-muted"><%= subject.code %></small>
                    <% end %>
                  </div>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                            data-bs-toggle="dropdown" aria-expanded="false">
                      <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li>
                        <%= link_to "#", class: "dropdown-item" do %>
                          <i class="fas fa-edit me-2"></i>Editar
                        <% end %>
                      </li>
                      <li>
                        <%= link_to "#", class: "dropdown-item" do %>
                          <i class="fas fa-calendar me-2"></i>Horários
                        <% end %>
                      </li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to direction_subject_path(subject), 
                            method: :delete,
                            class: "dropdown-item text-danger",
                            confirm: "Tem certeza que deseja remover esta disciplina da turma?" do %>
                          <i class="fas fa-trash me-2"></i>Remover
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </div>
                
                <% if subject.user %>
                  <div class="mt-2">
                    <small class="text-muted">
                      <i class="fas fa-user me-1"></i>
                      Prof. <%= subject.user.name %>
                    </small>
                  </div>
                <% end %>
                
                <% if subject.workload.present? %>
                  <div class="mt-1">
                    <small class="text-muted">
                      <i class="fas fa-clock me-1"></i>
                      <%= subject.workload %>h/semana
                    </small>
                  </div>
                <% end %>
                
                <div class="mt-2">
                  <span class="badge bg-<%= subject.active? ? 'success' : 'secondary' %>">
                    <%= subject.active? ? 'Ativa' : 'Inativa' %>
                  </span>
                  <% if subject.required? %>
                    <span class="badge bg-warning text-dark">Obrigatória</span>
                  <% end %>
                </div>
                
                <!-- Progresso/Estatísticas da Disciplina -->
                <div class="mt-3">
                  <div class="row text-center">
                    <div class="col-6">
                      <div class="border-end">
                        <div class="fs-6 fw-bold text-primary">
                          <%= subject.class_schedules.count %>
                        </div>
                        <div class="small text-muted">Horários</div>
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="fs-6 fw-bold text-info">
                        <%= subject.grades.count %>
                      </div>
                      <div class="small text-muted">Avaliações</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Resumo das Disciplinas -->
      <div class="row mt-3">
        <div class="col-md-3">
          <div class="text-center">
            <h6 class="text-primary mb-1"><%= @classroom.subjects.count %></h6>
            <small class="text-muted">Total de Disciplinas</small>
          </div>
        </div>
        <div class="col-md-3">
          <div class="text-center">
            <h6 class="text-success mb-1"><%= @classroom.subjects.where(active: true).count %></h6>
            <small class="text-muted">Disciplinas Ativas</small>
          </div>
        </div>
        <div class="col-md-3">
          <div class="text-center">
            <h6 class="text-warning mb-1"><%= @classroom.subjects.where(required: true).count %></h6>
            <small class="text-muted">Obrigatórias</small>
          </div>
        </div>
        <div class="col-md-3">
          <div class="text-center">
            <h6 class="text-info mb-1"><%= @classroom.subjects.sum(:workload) %></h6>
            <small class="text-muted">Carga Horária Total</small>
          </div>
        </div>
      </div>
    <% else %>
      <div class="text-center py-4">
        <i class="fas fa-book fa-3x text-muted mb-3"></i>
        <h6 class="text-muted">Nenhuma disciplina atribuída</h6>
        <p class="text-muted">Comece atribuindo disciplinas para esta turma.</p>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#subjectModal">
          <i class="fas fa-book"></i> Atribuir Primeira Disciplina
        </button>
      </div>
    <% end %>
  </div>
</div>

<!-- Modal Adicionar Aluno -->
<div class="modal fade" id="addStudentModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fas fa-user-plus"></i> Adicionar Aluno à Turma</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: direction_classroom_add_student_path(@classroom), local: true, method: :patch, class: "add-student-form" do |form| %>
          
          <div class="mb-3">
            <%= form.label :user_id, "Selecionar Aluno", class: "form-label" %>
            <%= form.select :user_id, 
                            options_from_collection_for_select(
                              User.where(user_type: 'student', school_id: current_user.school_id, classroom_id: nil), 
                              :id, :full_name),
                            { prompt: "Selecione um aluno..." }, 
                            { class: "form-select", required: true } %>
            <small class="form-text text-muted">
              Apenas alunos que não estão em nenhuma turma aparecem na lista
            </small>
          </div>
          
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <%= form.submit "Adicionar Aluno", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Modal Atribuir Disciplina -->
<div class="modal fade" id="subjectModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fas fa-book"></i> Atribuir Disciplina</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: direction_subjects_path, local: true, class: "subject-form" do |form| %>
          <%= form.hidden_field :classroom_id, value: @classroom.id %>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :name, "Nome da Disciplina", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", 
                  placeholder: "Ex: Matemática, Português...", required: true %>
            </div>
            
            <div class="col-md-6 mb-3">
              <%= form.label :code, "Código da Disciplina", class: "form-label" %>
              <%= form.text_field :code, class: "form-control", 
                  placeholder: "Ex: MAT01, POR01" %>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :user_id, "Professor Responsável", class: "form-label" %>
              <%= form.select :user_id, 
                              options_from_collection_for_select(
                                User.where(user_type: 'teacher', school_id: current_user.school_id), 
                                :id, :name),
                              { prompt: "Selecione um professor..." }, 
                              { class: "form-select", required: true } %>
            </div>
            
            <div class="col-md-6 mb-3">
              <%= form.label :workload, "Carga Horária Semanal", class: "form-label" %>
              <%= form.number_field :workload, min: 1, max: 40, class: "form-control", 
                  placeholder: "Horas por semana", required: true %>
            </div>
          </div>
          
          <div class="mb-3">
            <%= form.label :description, "Descrição", class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 3,
                placeholder: "Descrição da disciplina..." %>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <div class="form-check">
                <%= form.check_box :active, checked: true, class: "form-check-input" %>
                <%= form.label :active, "Disciplina ativa", class: "form-check-label" %>
              </div>
            </div>
            
            <div class="col-md-6 mb-3">
              <div class="form-check">
                <%= form.check_box :required, checked: true, class: "form-check-input" %>
                <%= form.label :required, "Disciplina obrigatória", class: "form-check-label" %>
              </div>
            </div>
          </div>
          
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <%= form.submit "Atribuir Disciplina", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

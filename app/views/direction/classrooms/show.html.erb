<% content_for :title, @classroom.name %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><i class="fas fa-door-open"></i> <%= @classroom.name %></h1>
    <small class="text-muted">
      <%= @classroom.level.humanize %> - <%= 
        case @classroom.shift
        when 'morning' then 'Matutino'
        when 'afternoon' then 'Vespertino'  
        when 'evening' then 'Noturno'
        else 'Turno não definido'
        end
      %>
    </small>
  </div>
  
  <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
      <i class="fas fa-cog"></i> Ações
    </button>
    <ul class="dropdown-menu">
      <li>
        <%= link_to edit_direction_classroom_path(@classroom), class: "dropdown-item" do %>
          <i class="fas fa-edit"></i> Editar Turma
        <% end %>
      </li>
      <li>
        <%= link_to "#", class: "dropdown-item", data: { bs_toggle: "modal", bs_target: "#addStudentModal" } do %>
          <i class="fas fa-user-plus"></i> Adicionar Aluno
        <% end %>
      </li>
      <li><hr class="dropdown-divider"></li>
      <li>
        <%= link_to direction_classrooms_path, class: "dropdown-item" do %>
          <i class="fas fa-arrow-left"></i> Voltar para Lista
        <% end %>
      </li>
    </ul>
  </div>
</div>

<!-- Estatísticas Rápidas -->
<div class="row mb-4">
  <div class="col-lg-3 col-md-6 mb-3">
    <div class="card text-center border-primary">
      <div class="card-body">
        <i class="fas fa-users fa-2x text-primary mb-2"></i>
        <h3 class="text-primary"><%= @classroom.students.count %></h3>
        <p class="mb-0">Alunos Matriculados</p>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3 col-md-6 mb-3">
    <div class="card text-center border-success">
      <div class="card-body">
        <i class="fas fa-book fa-2x text-success mb-2"></i>
        <h3 class="text-success"><%= @classroom.class_schedules.joins(:subject).distinct.count('subjects.id') %></h3>
        <p class="mb-0">Disciplinas</p>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3 col-md-6 mb-3">
    <div class="card text-center border-info">
      <div class="card-body">
        <i class="fas fa-chalkboard-teacher fa-2x text-info mb-2"></i>
        <h3 class="text-info"><%= @classroom.class_schedules.joins(subject: :user).distinct.count('users.id') %></h3>
        <p class="mb-0">Professores</p>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3 col-md-6 mb-3">
    <div class="card text-center border-warning">
      <div class="card-body">
        <i class="fas fa-clock fa-2x text-warning mb-2"></i>
        <h3 class="text-warning">
          <%= @classroom.class_schedules.sum do |schedule|
                ((schedule.end_time - schedule.start_time) / 1.hour).round
              end %>
        </h3>
        <p class="mb-0">Horas/Semana</p>
      </div>
    </div>
  </div>
</div>

<!-- Horários -->
<div class="row mb-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-clock"></i> Horários</h5>
      </div>
      <div class="card-body">
        <% if @classroom.weekly_schedule.any? %>
          <div class="mb-3">
            <strong>Horário de Funcionamento:</strong><br>
            <span class="text-muted">
              <% first_class = @classroom.weekly_schedule.minimum(:start_time) %>
              <% last_class = @classroom.weekly_schedule.maximum(:end_time) %>
              <% if first_class && last_class %>
                <%= first_class.strftime("%H:%M") %> às <%= last_class.strftime("%H:%M") %>
              <% end %>
            </span>
          </div>
          
          <div class="mb-3">
            <strong>Dias com Aulas:</strong><br>
            <% active_weekdays = @classroom.weekly_schedule.distinct.pluck(:weekday).sort %>
            <% day_names = ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb'] %>
            <% active_weekdays.each do |day| %>
              <span class="badge bg-primary me-1"><%= day_names[day] %></span>
            <% end %>
          </div>
        <% else %>
          <div class="text-muted">
            <i class="fas fa-info-circle me-2"></i>Nenhum horário definido para esta turma.
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-chart-bar"></i> Informações Gerais</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <strong>Nível:</strong><br>
          <span class="text-muted"><%= @classroom.level.humanize %></span>
        </div>
        
        <div class="mb-3">
          <strong>Turno:</strong><br>
          <span class="badge bg-<%= 
            case @classroom.shift
            when 'morning' then 'warning'
            when 'afternoon' then 'info'
            when 'evening' then 'dark'
            else 'secondary'
            end
          %>">
            <%= 
              case @classroom.shift
              when 'morning' then 'Matutino'
              when 'afternoon' then 'Vespertino'
              when 'evening' then 'Noturno'
              else 'Não definido'
              end
            %>
          </span>
        </div>
        
        <div class="mb-3">
          <strong>Ano Letivo:</strong><br>
          <span class="text-muted"><%= @classroom.academic_year %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Lista de Alunos -->
<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5><i class="fas fa-users"></i> Alunos da Turma</h5>
    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
      <i class="fas fa-user-plus"></i> Adicionar Aluno
    </button>
  </div>
  <div class="card-body">
    <% if @classroom.students.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Email</th>
              <th>Data de Cadastro</th>
              <th>Status</th>
              <th class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @classroom.students.each do |student| %>
              <tr>
                <td>
                  <strong><%= student.full_name %></strong>
                </td>
                <td><%= student.email %></td>
                <td><%= student.created_at.strftime("%d/%m/%Y") %></td>
                <td class="text-center">
                  <div class="btn-group btn-group-sm">
                    <%= link_to direction_student_path(student), class: "btn btn-outline-primary btn-sm" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= button_to remove_student_direction_classroom_path(@classroom, student), 
                               method: :patch, class: "btn btn-outline-danger btn-sm", 
                               data: { confirm: "Tem certeza que deseja remover este aluno da turma?" } do %>
                      <i class="fas fa-user-times"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-4">
        <i class="fas fa-users fa-3x text-muted mb-3"></i>
        <h6 class="text-muted">Nenhum aluno na turma</h6>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
          <i class="fas fa-user-plus"></i> Adicionar Primeiro Aluno
        </button>
      </div>
    <% end %>
  </div>
</div>



<!-- Modal Adicionar Aluno -->
<div class="modal fade" id="addStudentModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fas fa-user-plus"></i> Adicionar Aluno à Turma</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: add_student_direction_classroom_path(@classroom), local: true, method: :patch, class: "add-student-form" do |form| %>
          
          <div class="mb-3">
            <%= form.label :user_id, "Selecionar Aluno", class: "form-label" %>
            <%= form.select :user_id, 
                            options_from_collection_for_select(
                              User.where(user_type: 'student', school_id: current_user.school_id, classroom_id: nil), 
                              :id, :full_name),
                            { prompt: "Selecione um aluno..." }, 
                            { class: "form-select", required: true } %>
            <small class="form-text text-muted">
              Apenas alunos que não estão em nenhuma turma aparecem na lista
            </small>
          </div>
          
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <%= form.submit "Adicionar Aluno", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



<style>

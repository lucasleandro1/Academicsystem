<% content_for :title, @classroom.name %>
<% content_for :page_title, @classroom.name %>

<div class="container-fluid">
  <!-- Breadcrumb -->
  <div class="row">
    <div class="col-12">
      <div class="page-title-box d-sm-flex align-items-center justify-content-between">
        <h4 class="mb-sm-0">Turma</h4>
        <div class="page-title-right">
          <ol class="breadcrumb m-0">
            <li class="breadcrumb-item">
              <%= link_to "Direção", direction_root_path, class: "text-decoration-none" %>
            </li>
            <li class="breadcrumb-item">
              <%= link_to "Turmas", direction_classrooms_path, class: "text-decoration-none" %>
            </li>
            <li class="breadcrumb-item active"><%= @classroom.name %></li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <!-- Header -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="avatar-lg">
                <div class="avatar-title bg-primary rounded-circle fs-2">
                  <i class="fas fa-door-open"></i>
                </div>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h5 class="card-title mb-1"><%= @classroom.name %></h5>
              <p class="text-muted mb-0">
                <i class="fas fa-graduation-cap me-1"></i>
                <%= 
                  case @classroom.level
                  when 'elementary_1' then 'Ensino Fundamental I'
                  when 'elementary_2' then 'Ensino Fundamental II'
                  when 'high_school' then 'Ensino Médio'
                  else @classroom.level.humanize
                  end
                %>
              </p>
              <p class="text-muted mb-0">
                <i class="fas fa-clock me-1"></i>
                <%= 
                  case @classroom.shift
                  when 'morning' then 'Matutino'
                  when 'afternoon' then 'Vespertino'  
                  when 'evening' then 'Noturno'
                  else 'Turno não definido'
                  end
                %>
              </p>
            </div>
            <div class="flex-shrink-0">
              <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                  <i class="fas fa-cog"></i> Ações
                </button>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to edit_direction_classroom_path(@classroom), class: "dropdown-item" do %>
                      <i class="fas fa-edit"></i> Editar Turma
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "#", class: "dropdown-item", data: { bs_toggle: "modal", bs_target: "#addStudentModal" } do %>
                      <i class="fas fa-user-plus"></i> Adicionar Aluno
                    <% end %>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to direction_classrooms_path, class: "dropdown-item" do %>
                      <i class="fas fa-arrow-left"></i> Voltar para Lista
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Estatísticas da Turma -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-chart-line me-2"></i>Estatísticas da Turma
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-lg-3 col-md-6 mb-3">
              <div class="card text-center border-left-primary h-100">
                <div class="card-body">
                  <i class="fas fa-users fa-2x text-primary mb-2"></i>
                  <h3 class="text-primary mb-1"><%= @classroom.students.count %></h3>
                  <small class="text-muted">Alunos Matriculados</small>
                </div>
              </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
              <div class="card text-center border-left-success h-100">
                <div class="card-body">
                  <i class="fas fa-book fa-2x text-success mb-2"></i>
                  <h3 class="text-success mb-1"><%= @classroom.class_schedules.joins(:subject).distinct.count('subjects.id') %></h3>
                  <small class="text-muted">Disciplinas</small>
                </div>
              </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
              <div class="card text-center border-left-info h-100">
                <div class="card-body">
                  <i class="fas fa-chalkboard-teacher fa-2x text-info mb-2"></i>
                  <h3 class="text-info mb-1"><%= @classroom.class_schedules.joins(subject: :user).distinct.count('users.id') %></h3>
                  <small class="text-muted">Professores</small>
                </div>
              </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
              <div class="card text-center border-left-warning h-100">
                <div class="card-body">
                  <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                  <h3 class="text-warning mb-1">
                    <%= @classroom.class_schedules.sum do |schedule|
                          ((schedule.end_time - schedule.start_time) / 1.hour).round
                        end %>
                  </h3>
                  <small class="text-muted">Horas/Semana</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Informações Gerais e Horários -->
  <div class="row">
    <!-- Informações Gerais -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-info-circle me-2"></i>Informações Gerais
          </h5>
        </div>
        <div class="card-body">
          <table class="table table-borderless table-sm">
            <tr>
              <td class="fw-semibold text-muted">Nível:</td>
              <td>
                <span class="badge bg-primary">
                  <%= 
                    case @classroom.level
                    when 'elementary_1' then 'Fundamental I'
                    when 'elementary_2' then 'Fundamental II'
                    when 'high_school' then 'Ensino Médio'
                    else @classroom.level.humanize
                    end
                  %>
                </span>
              </td>
            </tr>
            <tr>
              <td class="fw-semibold text-muted">Turno:</td>
              <td>
                <span class="badge bg-<%= 
                  case @classroom.shift
                  when 'morning' then 'warning'
                  when 'afternoon' then 'info'
                  when 'evening' then 'dark'
                  else 'secondary'
                  end
                %>">
                  <%= 
                    case @classroom.shift
                    when 'morning' then 'Matutino'
                    when 'afternoon' then 'Vespertino'
                    when 'evening' then 'Noturno'
                    else 'Não definido'
                    end
                  %>
                </span>
              </td>
            </tr>
            <tr>
              <td class="fw-semibold text-muted">Ano Letivo:</td>
              <td><%= @classroom.academic_year %></td>
            </tr>
            <tr>
              <td class="fw-semibold text-muted">Criada em:</td>
              <td><%= @classroom.created_at.strftime("%d/%m/%Y") %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>

    <!-- Horários -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-clock me-2"></i>Horários
          </h5>
        </div>
        <div class="card-body">
          <% if @classroom.weekly_schedule.any? %>
            <div class="mb-3">
              <h6 class="text-primary mb-2">Funcionamento</h6>
              <% first_class = @classroom.weekly_schedule.minimum(:start_time) %>
              <% last_class = @classroom.weekly_schedule.maximum(:end_time) %>
              <% if first_class && last_class %>
                <p class="text-muted mb-0">
                  <i class="fas fa-clock me-1"></i>
                  <%= first_class.strftime("%H:%M") %> às <%= last_class.strftime("%H:%M") %>
                </p>
              <% end %>
            </div>
            
            <div class="mb-3">
              <h6 class="text-primary mb-2">Dias Letivos</h6>
              <% active_weekdays = @classroom.weekly_schedule.distinct.pluck(:weekday).sort %>
              <% day_names = ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb'] %>
              <% active_weekdays.each do |day| %>
                <span class="badge bg-secondary me-1"><%= day_names[day] %></span>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-muted py-3">
              <i class="fas fa-info-circle fs-3 mb-2 d-block"></i>
              <p class="mb-0">Nenhum horário definido</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Lista de Alunos -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class="d-flex align-items-center justify-content-between">
            <h5 class="card-title mb-0">
              <i class="fas fa-users me-2"></i>Alunos da Turma
            </h5>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
              <i class="fas fa-user-plus me-1"></i> Adicionar Aluno
            </button>
          </div>
        </div>
        <div class="card-body">
          <% if @classroom.students.any? %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Data de Cadastro</th>
                    <th>Status</th>
                    <th class="text-center">Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% @classroom.students.each do |student| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <div class="flex-shrink-0">
                            <div class="avatar-xs">
                              <div class="avatar-title bg-primary-subtle text-primary rounded-circle">
                                <%= student.full_name.first.upcase %>
                              </div>
                            </div>
                          </div>
                          <div class="flex-grow-1 ms-2">
                            <strong><%= student.full_name %></strong>
                          </div>
                        </div>
                      </td>
                      <td><%= student.email %></td>
                      <td><%= student.created_at.strftime("%d/%m/%Y") %></td>
                      <td>
                        <span class="badge bg-success">Ativo</span>
                      </td>
                      <td class="text-center">
                        <div class="btn-group btn-group-sm">
                          <%= link_to direction_student_path(student), class: "btn btn-outline-primary btn-sm" do %>
                            <i class="fas fa-eye"></i>
                          <% end %>
                          <%= button_to remove_student_direction_classroom_path(@classroom, student), 
                                     method: :patch, class: "btn btn-outline-danger btn-sm", 
                                     data: { confirm: "Tem certeza que deseja remover este aluno da turma?" } do %>
                            <i class="fas fa-user-times"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <div class="avatar-lg mx-auto mb-4">
                <div class="avatar-title bg-primary-subtle text-primary rounded-circle fs-2">
                  <i class="fas fa-users"></i>
                </div>
              </div>
              <h6 class="text-muted mb-3">Nenhum aluno na turma</h6>
              <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
                <i class="fas fa-user-plus me-1"></i> Adicionar Primeiro Aluno
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Modal Adicionar Aluno -->
<div class="modal fade" id="addStudentModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-user-plus me-2"></i>Adicionar Aluno à Turma
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: add_student_direction_classroom_path(@classroom), local: true, method: :patch, class: "add-student-form" do |form| %>
          <div class="mb-3">
            <%= form.label :user_id, "Selecionar Aluno", class: "form-label" %>
            <%= form.select :user_id, 
                            options_from_collection_for_select(
                              User.where(user_type: 'student', school_id: current_user.school_id, classroom_id: nil), 
                              :id, :full_name),
                            { prompt: "Selecione um aluno..." }, 
                            { class: "form-select", required: true } %>
            <div class="form-text">
              Apenas alunos que não estão em nenhuma turma aparecem na lista
            </div>
          </div>
          
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
              Cancelar
            </button>
            <%= form.submit "Adicionar Aluno", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
/* Estilos para borders coloridos dos cards */
.border-left-primary {
  border-left: 4px solid #007bff !important;
}

.border-left-success {
  border-left: 4px solid #28a745 !important;
}

.border-left-info {
  border-left: 4px solid #17a2b8 !important;
}

.border-left-warning {
  border-left: 4px solid #ffc107 !important;
}

.card-stat {
  transition: transform 0.2s ease-in-out;
}

.card-stat:hover {
  transform: translateY(-2px);
}
</style>


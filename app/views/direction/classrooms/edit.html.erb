<% content_for :title, "Editar Turma" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-edit"></i> Editar Turma</h1>
  <div>
    <%= link_to direction_classroom_path(@classroom), class: "btn btn-outline-info me-2" do %>
      <i class="fas fa-eye"></i> Visualizar
    <% end %>
    <%= link_to direction_classrooms_path, class: "btn btn-outline-secondary" do %>
      <i class="fas fa-arrow-left"></i> Voltar
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8 mx-auto">
    <%= form_with model: [:direction, @classroom], local: true, class: "needs-validation", novalidate: true do |form| %>
      
      <!-- Informações Básicas -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-info-circle"></i> Informações Básicas</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :name, "Nome da Turma *", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", required: true %>
              <div class="invalid-feedback">
                Por favor, informe o nome da turma.
              </div>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :code, "Código da Turma", class: "form-label" %>
              <%= form.text_field :code, class: "form-control" %>
            </div>

            <div class="col-md-4 mb-3">
              <%= form.label :level, "Nível de Ensino *", class: "form-label" %>
              <%= form.select :level, 
                              options_for_select([
                                ['Fundamental I', 'elementary_1'],
                                ['Fundamental II', 'elementary_2'], 
                                ['Ensino Médio', 'high_school']
                              ], @classroom.level),
                              {}, { class: "form-select", required: true } %>
              <div class="invalid-feedback">
                Por favor, selecione o nível de ensino.
              </div>
            </div>

            <div class="col-md-4 mb-3">
              <%= form.label :shift, "Turno *", class: "form-label" %>
              <%= form.select :shift, 
                              options_for_select([
                                ['Matutino', 'morning'],
                                ['Vespertino', 'afternoon'],
                                ['Noturno', 'evening']
                              ], @classroom.shift),
                              {}, { class: "form-select", required: true } %>
              <div class="invalid-feedback">
                Por favor, selecione o turno.
              </div>
            </div>

            <div class="col-md-4 mb-3">
              <%= form.label :academic_year, "Ano Letivo *", class: "form-label" %>
              <%= form.number_field :academic_year, class: "form-control", 
                                   min: Date.current.year - 1, 
                                   max: Date.current.year + 1, 
                                   required: true %>
              <div class="invalid-feedback">
                Por favor, informe o ano letivo.
              </div>
            </div>

            <div class="col-12 mb-3">
              <%= form.label :description, "Descrição", class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 3 %>
            </div>
          </div>
        </div>
      </div>

      <!-- Dias de Funcionamento -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Dias de Funcionamento</h5>
        </div>
        <div class="card-body">
          <div class="col-12 mb-3">
            <%= form.label :active_days, "Dias da Semana *", class: "form-label" %>
            <div class="row">
              <% [
                ['Segunda-feira', 'monday'],
                ['Terça-feira', 'tuesday'], 
                ['Quarta-feira', 'wednesday'],
                ['Quinta-feira', 'thursday'],
                ['Sexta-feira', 'friday'],
                ['Sábado', 'saturday']
              ].each do |day_name, day_value| %>
                <div class="col-md-4 col-6">
                  <div class="form-check">
                    <%= form.check_box :active_days, 
                                      { multiple: true, class: "form-check-input", 
                                        checked: @classroom.active_days&.include?(day_value) }, 
                                      day_value, "" %>
                    <%= form.label "active_days_#{day_value}", day_name, class: "form-check-label" %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="form-text">
              Selecione os dias da semana em que esta turma funciona. Os horários específicos serão definidos na grade de horários.
            </div>
          </div>
        </div>
      </div>

      <!-- Localização -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-map-marker-alt"></i> Localização</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :classroom_number, "Número da Sala", class: "form-label" %>
              <%= form.text_field :classroom_number, class: "form-control" %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :building, "Prédio/Bloco", class: "form-label" %>
              <%= form.text_field :building, class: "form-control" %>
            </div>

            <div class="col-12 mb-3">
              <%= form.label :location_notes, "Observações de Localização", class: "form-label" %>
              <%= form.text_area :location_notes, class: "form-control", rows: 2 %>
            </div>
          </div>
        </div>
      </div>

      <!-- Configurações Adicionais -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-cog"></i> Configurações Adicionais</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :semester, "Duração do Curso", class: "form-label" %>
              <%= form.select :semester, 
                              options_for_select([
                                ['Curso Anual', 'annual'],
                                ['1º Semestre', 'first'],
                                ['2º Semestre', 'second']
                              ], @classroom.semester),
                              {}, { class: "form-select" } %>
              <div class="form-text">
                Define se a turma funciona o ano todo ou apenas um semestre
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Ações -->
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <%= link_to direction_classroom_path(@classroom), class: "btn btn-outline-info me-2" do %>
                <i class="fas fa-eye"></i> Visualizar
              <% end %>
              <%= link_to direction_classrooms_path, class: "btn btn-outline-secondary" do %>
                <i class="fas fa-times"></i> Cancelar
              <% end %>
            </div>
            
            <div>
              <%= form.submit "Salvar Alterações", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>

<script>
// Validação do formulário
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>

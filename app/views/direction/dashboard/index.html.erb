<%# Page Title %>
<% content_for :title, "Dashboard - Direção" %>

<!-- Welcome Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div>
    <h1 class="h2">
      <i class="fas fa-tachometer-alt text-primary me-2"></i>
      Dashboard da Direção
    </h1>
    <p class="text-muted mb-0">
      Bem-vindo(a), <%= current_user.full_name %>! 
      Escola: <strong><%= current_user.school.name %></strong>
    </p>
  </div>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to new_direction_event_path, class: "btn btn-sm btn-outline-primary" do %>
        <i class="fas fa-plus"></i> Novo Evento
      <% end %>
      <%= link_to direction_reports_path, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-chart-bar"></i> Relatórios
      <% end %>
      <%= link_to direction_messages_path, class: "btn btn-sm btn-outline-info" do %>
        <i class="fas fa-envelope"></i> Mensagens
      <% end %>
    </div>
  </div>
</div>

<!-- Statistics Cards -->
        <div class="row text-center">
          <div class="col-6 col-md-3 mb-3">
            <h3 class="text-primary mb-1"><%= @total_students %></h3>
            <small class="text-muted">Alunos</small>
          </div>
          <div class="col-6 col-md-3 mb-3">
            <h3 class="text-success mb-1"><%= @total_teachers %></h3>
            <small class="text-muted">Professores</small>
          </div>
          <div class="col-6 col-md-3 mb-3">
            <h3 class="text-info mb-1"><%= @total_classrooms %></h3>
            <small class="text-muted">Turmas</small>
          </div>
          <div class="col-6 col-md-3 mb-3">
            <h3 class="text-warning mb-1"><%= @total_subjects %></h3>
            <small class="text-muted">Disciplinas</small>
          </div>
        </div>

<!-- Content Row -->
<div class="row">
  <!-- Pending Enrollments -->
  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-clipboard-check me-2"></i>
          Matrículas Pendentes
        </h6>
        <%= link_to direction_enrollments_path, class: "btn btn-sm btn-primary" do %>
          Ver Todas
        <% end %>
      </div>
      <div class="card-body">
        <% pending_enrollments = @pending_enrollments || Enrollment.joins(:classroom).where(classrooms: { school: current_user.school }, status: 'pending').limit(5) %>
        <% if pending_enrollments.any? %>
          <% pending_enrollments.each do |enrollment| %>
            <div class="d-flex align-items-center mb-3">
              <div class="me-3">
                <div class="rounded-circle bg-warning text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                  <i class="fas fa-user"></i>
                </div>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-0"><%= enrollment.user.full_name %></h6>
                <small class="text-muted"><%= enrollment.subject.name %></small>
              </div>
              <div>
                <%= link_to "Aprovar", direction_enrollment_path(enrollment, status: 'approved'), 
                           method: :patch, class: "btn btn-sm btn-success me-1" %>
                <%= link_to "Rejeitar", direction_enrollment_path(enrollment, status: 'rejected'), 
                           method: :patch, class: "btn btn-sm btn-danger" %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-check-circle fa-3x mb-3"></i>
            <p>Nenhuma matrícula pendente!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Events -->
  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-calendar-alt me-2"></i>
          Próximos Eventos
        </h6>
        <%= link_to direction_events_path, class: "btn btn-sm btn-primary" do %>
          Ver Todos
        <% end %>
      </div>
      <div class="card-body">
        <% upcoming_events = @upcoming_events || [] %>
        <% if upcoming_events.any? %>
          <% upcoming_events.each do |event| %>
            <div class="d-flex align-items-center mb-3">
              <div class="me-3">
                <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                  <i class="fas fa-calendar"></i>
                </div>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-0"><%= event.title %></h6>
                <small class="text-muted">
                  <i class="fas fa-clock me-1"></i>
                  <%= event.start_date.strftime("%d/%m/%Y") %>
                </small>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-calendar-plus fa-3x mb-3"></i>
            <p>Nenhum evento programado</p>
            <%= link_to "Criar Evento", new_direction_event_path, class: "btn btn-primary btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Recent Occurrences -->
<div class="row">
  <div class="col-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-exclamation-triangle me-2"></i>
          Ocorrências Recentes
        </h6>
        <%= link_to direction_occurrences_path, class: "btn btn-sm btn-primary" do %>
          Ver Todas
        <% end %>
      </div>
      <div class="card-body">
        <% recent_occurrences = @recent_occurrences || Occurrence.where(school: current_user.school).order(created_at: :desc).limit(5) %>
        <% if recent_occurrences.any? %>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Aluno</th>
                  <th>Disciplina</th>
                  <th>Tipo</th>
                  <th>Data</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% recent_occurrences.each do |occurrence| %>
                  <tr>
                    <td><%= occurrence.user.full_name %></td>
                    <td><%= occurrence.subject.name %></td>
                    <td>
                      <span class="badge bg-<%= occurrence.occurrence_type == 'disciplinary' ? 'danger' : 'warning' %>">
                        <%= occurrence.occurrence_type.humanize %>
                      </span>
                    </td>
                    <td><%= occurrence.date.strftime("%d/%m/%Y") %></td>
                    <td>
                      <span class="badge bg-<%= occurrence.resolved? ? 'success' : 'warning' %>">
                        <%= occurrence.resolved? ? 'Resolvida' : 'Pendente' %>
                      </span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-smile fa-3x mb-3"></i>
            <p>Nenhuma ocorrência registrada!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Estatísticas Adicionais -->
<div class="row mt-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-chart-line"></i> Estatísticas Gerais
        </h6>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-md-3 mb-3">
            <div class="border-left-success p-3">
              <h4 class="text-success"><%= @attendance_rate %>%</h4>
              <small class="text-muted">Taxa de Frequência</small>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <div class="border-left-info p-3">
              <h4 class="text-info"><%= @average_grade %></h4>
              <small class="text-muted">Média Geral</small>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <div class="border-left-warning p-3">
              <h4 class="text-warning"><%= @total_activities %></h4>
              <small class="text-muted">Atividades Totais</small>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <div class="border-left-primary p-3">
              <h4 class="text-primary"><%= @total_messages %></h4>
              <small class="text-muted">Mensagens Enviadas</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
  }
  .border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
  }
  .border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
  }
  .border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
  }
  .text-xs {
    font-size: 0.7rem;
  }
  .text-gray-800 {
    color: #5a5c69 !important;
  }
  .text-gray-300 {
    color: #dddfeb !important;
  }
</style>

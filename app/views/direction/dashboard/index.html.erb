<%# Page Title %>
<% content_for :title, "Dashboard - Direção" %>

<!-- Welcome Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div>
    <h1 class="h2">
      <i class="fas fa-tachometer-alt text-primary me-2"></i>
      Dashboard da Direção
    </h1>
    <p class="text-muted mb-0">
      Bem-vindo(a), <%= current_user.full_name %>! 
      Escola: <strong><%= current_user.school.name %></strong>
    </p>
  </div>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to new_direction_event_path, class: "btn btn-sm btn-outline-primary" do %>
        <i class="fas fa-plus"></i> Novo Evento
      <% end %>
      <%= link_to direction_reports_path, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-chart-bar"></i> Relatórios
      <% end %>
      <%= link_to direction_messages_path, class: "btn btn-sm btn-outline-info" do %>
        <i class="fas fa-envelope"></i> Mensagens
      <% end %>
    </div>
  </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              Alunos Matriculados
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="total-students">
              <%= @total_students %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-user-graduate fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
              Professores Ativos
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="total-teachers">
              <%= @total_teachers %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
              Turmas Ativas
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="total-classrooms">
              <%= @total_classrooms %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-school fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              Disciplinas
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="total-subjects">
              <%= current_user.school.subjects.count %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-book fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Content Row -->
<div class="row">
  <!-- Alerts and Important Notifications -->
  <% if @important_notifications.any? || @alerts.any? %>
    <div class="col-12 mb-4">
      <div class="card shadow">
        <div class="card-header">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-bell me-2"></i>Avisos Importantes
          </h6>
        </div>
        <div class="card-body">
          <% @important_notifications.each do |notification| %>
            <div class="alert alert-<%= notification[:type] %> alert-dismissible fade show" role="alert">
              <i class="<%= notification[:icon] %> me-2"></i>
              <strong><%= notification[:title] %>:</strong> <%= notification[:message] %>
              <% if notification[:link] %>
                <%= link_to "Ver detalhes", notification[:link], class: "btn btn-sm btn-outline-#{notification[:type]} ms-2" %>
              <% end %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>
          
          <% @alerts.each do |alert| %>
            <div class="alert alert-<%= alert[:type] %>" role="alert">
              <strong><%= alert[:title] %>:</strong> <%= alert[:message] %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Recent Events -->
  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-calendar-alt me-2"></i>
          Próximos Eventos
        </h6>
        <%= link_to direction_events_path, class: "btn btn-sm btn-primary" do %>
          Ver Todos
        <% end %>
      </div>
      <div class="card-body">
        <% upcoming_events = @upcoming_events || [] %>
        <% if upcoming_events.any? %>
          <% upcoming_events.each do |event| %>
            <div class="d-flex align-items-center mb-3">
              <div class="me-3">
                <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                  <i class="fas fa-calendar"></i>
                </div>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-0"><%= event.title %></h6>
                <small class="text-muted">
                  <i class="fas fa-clock me-1"></i>
                  <%= event.start_date.strftime("%d/%m/%Y") %>
                </small>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-calendar-plus fa-3x mb-3"></i>
            <p>Nenhum evento programado</p>
            <%= link_to "Criar Evento", new_direction_event_path, class: "btn btn-primary btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Estatísticas Adicionais -->
<div class="row mt-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-chart-line"></i> Estatísticas Gerais
        </h6>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-md-3 mb-3">
            <div class="border-left-success p-3">
              <h4 class="text-success" id="attendance-rate"><%= @attendance_rate %>%</h4>
              <small class="text-muted">Taxa de Frequência</small>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <div class="border-left-info p-3">
              <h4 class="text-info" id="average-grade"><%= @average_grade %></h4>
              <small class="text-muted">Média Geral</small>
            </div>
          </div>

          <div class="col-md-3 mb-3">
            <div class="border-left-primary p-3">
              <h4 class="text-primary" id="total-messages"><%= @total_messages %></h4>
              <small class="text-muted">Mensagens Enviadas</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
  }
  .border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
  }
  .border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
  }
  .border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
  }
  .text-xs {
    font-size: 0.7rem;
  }
  .text-gray-800 {
    color: #5a5c69 !important;
  }
  .text-gray-300 {
    color: #dddfeb !important;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const refreshButton = document.getElementById('refresh-dashboard');
  const refreshIcon = refreshButton.querySelector('i');
  
  refreshButton.addEventListener('click', function() {
    // Mostrar loading
    refreshIcon.classList.remove('fa-sync-alt');
    refreshIcon.classList.add('fa-spinner', 'fa-spin');
    refreshButton.disabled = true;
    
    // Fazer requisição AJAX
    fetch('<%= direction_dashboard_refresh_data_path %>', {
      method: 'GET',
      headers: {
        'Accept': 'application/json',
        'X-Requested-With': 'XMLHttpRequest',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.error) {
        throw new Error(data.error);
      }
      
      // Atualizar os valores na tela
      document.getElementById('total-students').textContent = data.total_students;
      document.getElementById('total-teachers').textContent = data.total_teachers;
      document.getElementById('total-classrooms').textContent = data.total_classrooms;
      document.getElementById('total-subjects').textContent = data.total_subjects;
      document.getElementById('attendance-rate').textContent = data.attendance_rate + '%';
      document.getElementById('average-grade').textContent = data.average_grade;

      document.getElementById('total-messages').textContent = data.total_messages;
      
      // Mostrar mensagem de sucesso
      showUpdateMessage('Dados atualizados com sucesso! Última atualização: ' + data.updated_at, 'success');
    })
    .catch(error => {
      console.error('Erro ao atualizar dados:', error);
      showUpdateMessage('Erro ao atualizar dados: ' + error.message, 'danger');
    })
    .finally(() => {
      // Restaurar botão
      refreshIcon.classList.remove('fa-spinner', 'fa-spin');
      refreshIcon.classList.add('fa-sync-alt');
      refreshButton.disabled = false;
    });
  });
  
  function showUpdateMessage(message, type) {
    // Remover mensagens anteriores
    const existingAlert = document.querySelector('.dashboard-update-alert');
    if (existingAlert) {
      existingAlert.remove();
    }
    
    // Criar nova mensagem
    const alert = document.createElement('div');
    alert.className = `alert alert-${type} alert-dismissible fade show dashboard-update-alert`;
    alert.innerHTML = `
      <i class="fas fa-info-circle me-2"></i>
      ${message}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    
    // Inserir no topo da página
    const container = document.querySelector('.container-fluid') || document.body;
    container.insertBefore(alert, container.firstChild);
    
    // Auto remover após 5 segundos
    setTimeout(() => {
      if (alert.parentNode) {
        alert.remove();
      }
    }, 5000);
  }
});
</script>

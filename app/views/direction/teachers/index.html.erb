<% content_for :title, "Professores" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-chalkboard-teacher"></i> Gerenciar Professores</h1>
  <%= link_to new_direction_teacher_path, class: "btn btn-primary" do %>
    <i class="fas fa-user-plus"></i> Novo Professor
  <% end %>
</div>

<!-- Filtros e Busca -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: direction_teachers_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-4">
        <%= form.text_field :search, placeholder: "Buscar por nome, e-mail ou especialização...", 
                           value: params[:search], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.select :subject_id, 
                        options_from_collection_for_select(current_user.school.subjects, :id, :name, params[:subject_id]),
                        { prompt: "Todas as disciplinas" }, { class: "form-select" } %>
      </div>
      <div class="col-md-3">
        <div class="d-grid">
          <%= form.submit "Filtrar", class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Estatísticas Rápidas -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h3 class="text-primary"><%= @teachers.count %></h3>
        <small class="text-muted">Total de Professores</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h3 class="text-success"><%= @teachers.count %></h3>
        <small class="text-muted">Total de Professores</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h3 class="text-info"><%= @teachers.joins(:teacher_subjects).distinct.count %></h3>
        <small class="text-muted">Com Disciplinas</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h3 class="text-warning"><%= @teachers.where('created_at >= ?', 30.days.ago).count %></h3>
        <small class="text-muted">Novos (30 dias)</small>
      </div>
    </div>
  </div>
</div>

<!-- Lista de Professores -->
<div class="card">
  <div class="card-header">
    <h5><i class="fas fa-list"></i> Lista de Professores</h5>
  </div>
  <div class="card-body">
    <% if @teachers.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Professor</th>
              <th>Contato</th>
              <th>Disciplinas</th>
              <th>Última Atividade</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @teachers.each do |teacher| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar me-3">
                      <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white" 
                           style="width: 40px; height: 40px;">
                        <%= teacher.first_name&.first&.upcase || 'P' %>
                      </div>
                    </div>
                    <div>
                      <div class="fw-medium"><%= "#{teacher.first_name} #{teacher.last_name}" %></div>
                      <small class="text-muted">Professor(a)</small>
                    </div>
                  </div>
                </td>
                <td>
                  <div>
                    <i class="fas fa-envelope text-muted"></i>
                    <%= teacher.email %>
                  </div>
                  <% if teacher.phone.present? %>
                    <div>
                      <i class="fas fa-phone text-muted"></i>
                      <%= teacher.phone %>
                    </div>
                  <% end %>
                </td>
                <td>
                  <% if teacher.teacher_subjects.any? %>
                    <% teacher.teacher_subjects.limit(3).each do |subject| %>
                      <span class="badge bg-secondary me-1"><%= subject.name %></span>
                    <% end %>
                    <% if teacher.teacher_subjects.count > 3 %>
                      <small class="text-muted">+<%= teacher.teacher_subjects.count - 3 %> mais</small>
                    <% end %>
                  <% else %>
                    <span class="text-muted">Nenhuma</span>
                  <% end %>
                </td>
                <td>
                  <% if teacher.respond_to?(:last_sign_in_at) && teacher.last_sign_in_at %>
                    <%= time_ago_in_words(teacher.last_sign_in_at) %> atrás
                  <% else %>
                    <span class="text-muted">Nunca acessou</span>
                  <% end %>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <%= link_to direction_teacher_path(teacher), class: "btn btn-outline-primary" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_direction_teacher_path(teacher), class: "btn btn-outline-secondary" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <div class="dropdown">
                      <button class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                      </button>
                      <ul class="dropdown-menu">
                        <li>
                          <%= link_to "#", class: "dropdown-item" do %>
                            <i class="fas fa-envelope"></i> Enviar Mensagem
                          <% end %>
                        </li>
                        <li>
                          <%= link_to "#", class: "dropdown-item" do %>
                            <i class="fas fa-key"></i> Redefinir Senha
                          <% end %>
                        </li>
                      </ul>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Nenhum professor encontrado</h5>
        <p class="text-muted">
          <% if params.except(:action, :controller).present? %>
            Não há professores que correspondam aos filtros selecionados.
          <% else %>
            Nenhum professor foi cadastrado ainda.
          <% end %>
        </p>
        <%= link_to new_direction_teacher_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus"></i> Cadastrar Primeiro Professor
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Gráfico de Distribuição por Disciplina -->
<% if @teachers.any? %>
  <div class="card mt-4">
    <div class="card-header">
      <h5><i class="fas fa-chart-pie"></i> Distribuição por Área</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <% subject_stats = @teachers.joins(:teacher_subjects).group('subjects.name').count %>
        <% subject_stats.each do |subject_name, count| %>
          <div class="col-md-6 col-lg-3 mb-3">
            <div class="text-center">
              <h4 class="text-primary"><%= count %></h4>
              <small class="text-muted"><%= subject_name %></small>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Minhas Disciplinas</h1>
</div>

<div class="row">
  <div class="col-12">
    <% if @subjects.any? %>
      <div class="row">
        <% @subjects.each do |subject| %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card">
              <div class="card-header">
                <h5 class="card-title mb-0"><%= subject.name %></h5>
              </div>
              <div class="card-body">
                <p class="card-text">
                  <strong>Professor:</strong> <%= subject.user.full_name %><br>
                  <strong>Carga Horária:</strong> <%= subject.workload %>h<br>
                </p>
                
                <% schedules = subject.class_schedules.where(classroom: current_user.classroom).order(:weekday, :start_time) %>
                <% if schedules.any? %>
                  <div class="mb-2">
                    <strong>Horários:</strong>
                    <% schedules.each do |schedule| %>
                      <div class="small text-muted">
                        <%= schedule.weekday_short %>: <%= schedule.time_range %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
                
                <% if subject.description.present? %>
                  <p class="card-text">
                    <small class="text-muted"><%= truncate(subject.description, length: 100) %></small>
                  </p>
                <% end %>
              </div>
              <div class="card-footer">
                <%= link_to "Ver Detalhes", students_subject_path(subject), class: "btn btn-sm btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        Você ainda não está matriculado em nenhuma disciplina.
      </div>
    <% end %>
  </div>
</div>

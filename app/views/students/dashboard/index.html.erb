<%# Page Title %>
<% content_for :title, "Dashboard - Estudante" %>

<!-- Welcome Header -->
<% upcoming_activities = [] %>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div>
    <h1 class="h2">
      <i class="fas fa-user-graduate text-success me-2"></i>
      Meu Painel Estudantil
    </h1>
    <p class="text-muted mb-0">
      Bem-vindo(a), <%= current_user.full_name %>! 
      Acompanhe seu progresso acadêmico.
    </p>
  </div>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to students_subjects_path, class: "btn btn-sm btn-outline-primary" do %>
        <i class="fas fa-book"></i> Minhas Matérias
      <% end %>
      <%= link_to students_class_schedules_path, class: "btn btn-sm btn-outline-success" do %>
        <i class="fas fa-calendar"></i> Horários
      <% end %>
    </div>
  </div>
</div>

<!-- Student Statistics -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              Minhas Turmas
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= current_user.classroom ? 1 : 0 %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-users fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
              Média Geral
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <% avg = Grade.where(student: current_user).average(:value) %>
              <%= avg ? number_with_precision(avg, precision: 1) : 'N/A' %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
              Próximos Eventos
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <% upcoming_events_count = Event.where(school: current_user.school)
                                            .where('start_date >= ?', Date.current)
                                            .count %>
              <%= upcoming_events_count %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              Faltas
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <% total_absences = current_user.absences.count %>
              <%= total_absences %>
            </div>
            <div class="text-xs">
              <% if total_absences > 0 %>
                <span class="text-danger"><%= total_absences %> faltas registradas</span>
              <% else %>
                <span class="text-success">Nenhuma falta</span>
              <% end %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Current Grades and Schedule -->
<div class="row">
  <div class="col-lg-8 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-chart-bar me-2"></i>
          Minhas Notas por Matéria
        </h6>
      </div>
      <div class="card-body">
        <%# Buscar disciplinas através dos horários da turma do aluno %>
        <% if current_user.classroom %>
          <% student_subjects = current_user.classroom.subjects_from_schedules %>
          <% grades_by_subject = Grade.joins(:subject)
                                     .where(student: current_user, subject: student_subjects)
                                     .group('subjects.name')
                                     .average(:value) %>
        <% else %>
          <% grades_by_subject = {} %>
        <% end %>
        
        <% if grades_by_subject.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Matéria</th>
                  <th>Média</th>
                  <th>Status</th>
                  <th>Última Nota</th>
                </tr>
              </thead>
              <tbody>
                <% grades_by_subject.each do |subject_name, average| %>
                  <% last_grade = Grade.joins(:subject).where(student: current_user, subjects: {name: subject_name}).order(:created_at).last %>
                  <tr>
                    <td>
                      <strong><%= subject_name %></strong>
                    </td>
                    <td>
                      <span class="h5 mb-0 font-weight-bold text-<%= average >= 7 ? 'success' : average >= 5 ? 'warning' : 'danger' %>">
                        <%= number_with_precision(average, precision: 1) %>
                      </span>
                    </td>
                    <td>
                      <% if average >= 7 %>
                        <span class="badge bg-success">Aprovado</span>
                      <% elsif average >= 5 %>
                        <span class="badge bg-warning">Recuperação</span>
                      <% else %>
                        <span class="badge bg-danger">Reprovado</span>
                      <% end %>
                    </td>
                    <td>
                      <% if last_grade %>
                        <span class="text-muted">
                          <%= last_grade.display_grade %> 
                          <small>(<%= time_ago_in_words(last_grade.created_at) %> atrás)</small>
                        </span>
                      <% else %>
                        <span class="text-muted">Sem notas</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-chart-bar fa-3x mb-3"></i>
            <p>Ainda não há notas lançadas</p>
            <small>Entre em contato com seus professores</small>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-3 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-clock me-2"></i>
          Horários de Hoje
        </h6>
        <small class="text-muted">
          <% day_names = ['Domingo', 'Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado'] %>
          <%= Date.current.strftime("%d/%m") %> - <%= day_names[Date.current.wday] %>
        </small>
      </div>
      <div class="card-body">
        <% if @today_schedule&.any? %>
          <% @today_schedule.each_with_index do |schedule, index| %>
            <% current_time = Time.current %>
            <% schedule_start = Time.zone.parse("#{Date.current} #{schedule.start_time}") %>
            <% schedule_end = Time.zone.parse("#{Date.current} #{schedule.end_time}") %>
            <% is_current_class = current_time >= schedule_start && current_time <= schedule_end %>
            <% is_next_class = current_time < schedule_start && index == @today_schedule.index { |s| Time.zone.parse("#{Date.current} #{s.start_time}") > current_time } %>
            
            <div class="d-flex align-items-center mb-3 p-3 border rounded <%= 'border-success bg-light-success' if is_current_class %> <%= 'border-warning bg-light-warning' if is_next_class %>">
              <div class="me-3">
                <% if is_current_class %>
                  <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                    <i class="fas fa-play"></i>
                  </div>
                <% elsif is_next_class %>
                  <div class="rounded-circle bg-warning text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                    <i class="fas fa-clock"></i>
                  </div>
                <% else %>
                  <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                    <i class="fas fa-book"></i>
                  </div>
                <% end %>
              </div>
              <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <h6 class="mb-1 <%= 'text-success' if is_current_class %> <%= 'text-warning' if is_next_class %>">
                      <%= schedule.subject.name %>
                    </h6>
                    <p class="mb-1 small text-muted">
                      Prof. <%= schedule.subject.user.full_name %>
                    </p>
                    <% if is_current_class %>
                      <span class="badge bg-success">Agora</span>
                    <% elsif is_next_class %>
                      <span class="badge bg-warning">Próxima</span>
                    <% end %>
                  </div>
                  <div class="text-end">
                    <small class="text-muted d-block">
                      <%= schedule.start_time.strftime("%H:%M") %>
                    </small>
                    <small class="text-muted">
                      <%= schedule.end_time.strftime("%H:%M") %>
                    </small>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          
          <div class="mt-3 text-center">
            <%= link_to students_class_schedules_path, class: "btn btn-sm btn-outline-primary" do %>
              <i class="fas fa-calendar-week"></i> Ver semana completa
            <% end %>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <% if Date.current.saturday? || Date.current.sunday? %>
              <i class="fas fa-calendar-times fa-3x mb-3 text-info"></i>
              <h6>Final de semana</h6>
              <p>Não há aulas hoje</p>
              <small>Aproveite para descansar!</small>
            <% else %>
              <i class="fas fa-calendar-check fa-3x mb-3"></i>
              <h6>Nenhuma aula hoje</h6>
              <p>Você está livre!</p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<div class="row">
  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-bell me-2"></i>
          Avisos e Eventos
        </h6>
      </div>
      <div class="card-body">
        <% recent_events = Event.where(school: current_user.school)
                              .where('start_date >= ?', Date.current)
                              .order(:start_date)
                              .limit(5) %>
        <% if recent_events.any? %>
          <% recent_events.each do |event| %>
            <div class="d-flex align-items-start mb-3 p-2 border rounded">
              <div class="me-3">
                <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                  <i class="fas fa-calendar"></i>
                </div>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-1"><%= event.title %></h6>
                <p class="mb-1 small"><%= truncate(event.description, length: 80) %></p>
                <small class="text-muted">
                  <i class="fas fa-calendar me-1"></i>
                  <%= event.start_date.strftime("%d/%m/%Y") %>
                </small>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-calendar fa-2x mb-3"></i>
            <p>Nenhum evento próximo</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Messages and Performance -->
<div class="row">
  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-comments me-2"></i>
          Mensagens Recentes
        </h6>
        <% unread_count = current_user.received_messages.unread.count %>
        <% if unread_count > 0 %>
          <span class="badge bg-danger"><%= unread_count %></span>
        <% end %>
      </div>
      <div class="card-body">
        <% recent_messages = current_user.received_messages.order(created_at: :desc).limit(3) %>
        <% if recent_messages.any? %>
          <% recent_messages.each do |message| %>
            <div class="d-flex align-items-start mb-3 <%= 'bg-light' if message.unread? %> p-2 rounded">
              <div class="me-3">
                <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                  <i class="fas fa-user"></i>
                </div>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-1">
                  <%= message.sender.full_name %>
                  <% if message.unread? %>
                    <span class="badge bg-primary ms-1">Nova</span>
                  <% end %>
                </h6>
                <p class="mb-1 small"><%= truncate(message.body, length: 60) %></p>
                <small class="text-muted"><%= time_ago_in_words(message.created_at) %> atrás</small>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-3">
            <i class="fas fa-comments fa-2x mb-2"></i>
            <p>Nenhuma mensagem</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
  }
  .border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
  }
  .border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
  }
  .border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
  }
  .text-xs {
    font-size: 0.7rem;
  }
  .text-gray-800 {
    color: #5a5c69 !important;
  }
  .text-gray-300 {
    color: #dddfeb !important;
  }
  
  /* Estilos para os horários */
  .bg-light-success {
    background-color: rgba(28, 200, 138, 0.1) !important;
  }
  .bg-light-warning {
    background-color: rgba(246, 194, 62, 0.1) !important;
  }
  .border-success {
    border-color: #1cc88a !important;
  }
  .border-warning {
    border-color: #f6c23e !important;
  }
  
  /* Animação para aula atual */
  @keyframes pulse-success {
    0% { box-shadow: 0 0 0 0 rgba(28, 200, 138, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(28, 200, 138, 0); }
    100% { box-shadow: 0 0 0 0 rgba(28, 200, 138, 0); }
  }
  
  .border-success.bg-light-success {
    animation: pulse-success 2s infinite;
  }
</style>

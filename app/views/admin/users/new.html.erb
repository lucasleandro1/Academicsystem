<% content_for :title, "Novo Usuário" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-user-plus"></i> Novo Usuário</h1>
  <%= link_to admin_users_path, class: "btn btn-outline-secondary" do %>
    <i class="fas fa-arrow-left"></i> Voltar
  <% end %>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Informações do Usuário</h5>
      </div>
      <div class="card-body">
        <%= form_with model: @user, url: admin_users_path, local: true do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <h6>Ocorreram alguns erros:</h6>
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :first_name, "Nome", class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :last_name, "Sobrenome", class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control", required: true %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :email, "E-mail", class: "form-label" %>
                <%= f.email_field :email, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :user_type, "Tipo de Usuário", class: "form-label" %>
                <%= f.select :user_type, 
                             options_for_select([
                               ['Administrador', 'admin'],
                               ['Direção', 'direction'], 
                               ['Professor', 'teacher'], 
                               ['Aluno', 'student']
                             ]), 
                             { prompt: "Selecione o tipo" }, 
                             { class: "form-select", required: true } %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :password, "Senha", class: "form-label" %>
                <%= f.password_field :password, class: "form-control", 
                                   placeholder: "Deixe em branco para gerar automaticamente" %>
                <div class="form-text">Se deixado em branco, uma senha será gerada automaticamente.</div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :school_id, "Escola *", class: "form-label" %>
                <%= f.collection_select :school_id, @schools, :id, :name, 
                                          { prompt: "Selecione uma escola" }, 
                                          { class: "form-select" } %>
                <% if @user.errors[:school_id].any? %>
                <div class="invalid-feedback">
                  <%= @user.errors[:school_id].first %>
                </div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :phone, "Telefone", class: "form-label" %>
                <%= f.text_field :phone, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :birth_date, "Data de Nascimento", class: "form-label" %>
                <%= f.date_field :birth_date, class: "form-control" %>
              </div>
            </div>
          </div>

          <!-- Campos específicos por tipo de usuário -->
          <div id="student-fields" style="display: none;">
            <div class="mb-3">
              <%= f.label :guardian_name, "Nome do Responsável", class: "form-label" %>
              <%= f.text_field :guardian_name, class: "form-control" %>
            </div>
          </div>

          <div id="teacher-fields" style="display: none;">
            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :position, "Cargo", class: "form-label" %>
                  <%= f.text_field :position, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :specialization, "Especialização", class: "form-label" %>
                  <%= f.text_field :specialization, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to admin_users_path, class: "btn btn-outline-secondary me-md-2" do %>
              <i class="fas fa-times"></i> Cancelar
            <% end %>
            <%= f.submit "Criar Usuário", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h6 class="mb-0">Instruções</h6>
      </div>
      <div class="card-body">
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i>
          <strong>Tipos de Usuário:</strong>
          <ul class="mb-0 mt-2">
            <li><strong>Administrador:</strong> Acesso total ao sistema</li>
            <li><strong>Direção:</strong> Gerencia escola específica</li>
            <li><strong>Professor:</strong> Gerencia turmas e alunos</li>
            <li><strong>Aluno:</strong> Acesso às informações acadêmicas</li>
          </ul>
        </div>
        
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-triangle"></i>
          Se a senha não for informada, uma senha aleatória será gerada e deverá ser comunicada ao usuário.
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const userTypeSelect = document.querySelector('#user_user_type');
  const studentFields = document.querySelector('#student-fields');
  const teacherFields = document.querySelector('#teacher-fields');
  
  function toggleFields() {
    const userType = userTypeSelect.value;
    
    studentFields.style.display = userType === 'student' ? 'block' : 'none';
    teacherFields.style.display = userType === 'teacher' ? 'block' : 'none';
  }
  
  userTypeSelect.addEventListener('change', toggleFields);
  toggleFields(); // Initial call
});
</script>

<% content_for :title, "Configurações do Sistema - Administrador" %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div>
    <h1 class="h2">
      <i class="fas fa-cogs text-warning me-2"></i>
      Configurações do Sistema
    </h1>
    <p class="text-muted mb-0">Gerencie configurações gerais, permissões e manutenção do sistema.</p>
  </div>
</div>

<!-- Configurações Gerais -->
<div class="row">
  <div class="col-lg-6 mb-4">
    <div class="card h-100">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="fas fa-calendar-alt me-2"></i>
          Calendário Acadêmico
        </h6>
      </div>
      <div class="card-body">
        <p class="text-muted">Configure feriados municipais e datas importantes do calendário letivo.</p>
        <div class="d-grid gap-2">
          <%= link_to admin_calendars_path, class: "btn btn-outline-primary" do %>
            <i class="fas fa-edit"></i> Configurar Calendário
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-6 mb-4">
    <div class="card h-100">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="fas fa-users-cog me-2"></i>
          Gestão de Permissões
        </h6>
      </div>
      <div class="card-body">
        <p class="text-muted">Gerencie permissões de usuários e redefina senhas.</p>
        <div class="d-grid gap-2">
          <%= link_to manage_permissions_admin_settings_path, class: "btn btn-outline-warning" do %>
            <i class="fas fa-shield-alt"></i> Gerenciar Permissões
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-6 mb-4">
    <div class="card h-100">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="fas fa-database me-2"></i>
          Backup e Segurança
        </h6>
      </div>
      <div class="card-body">
        <p class="text-muted">Realize backup dos dados e configure opções de segurança.</p>
        <div class="d-grid gap-2">
          <%= link_to admin_settings_path, method: :post, 
                     class: "btn btn-outline-success",
                     confirm: "Tem certeza que deseja iniciar o backup?" do %>
            <i class="fas fa-save"></i> Fazer Backup
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-6 mb-4">
    <div class="card h-100">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="fas fa-info-circle me-2"></i>
          Informações do Sistema
        </h6>
      </div>
      <div class="card-body">
        <p class="text-muted">Visualize informações técnicas e status do sistema.</p>
        <div class="d-grid gap-2">
          <%= link_to system_info_admin_settings_path, class: "btn btn-outline-info" do %>
            <i class="fas fa-chart-line"></i> Ver Informações
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Ações de Emergência -->
<div class="card border-danger">
  <div class="card-header bg-danger text-white">
    <h6 class="mb-0">
      <i class="fas fa-exclamation-triangle me-2"></i>
      Ações de Emergência
    </h6>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <h6 class="text-danger">Reset de Acessos</h6>
        <p class="text-muted small">Use apenas em casos de problemas de acesso graves.</p>
        <button class="btn btn-outline-danger btn-sm" 
                onclick="alert('Entre em contato com o suporte técnico para realizar esta ação.')">
          <i class="fas fa-key"></i> Reset Global de Senhas
        </button>
      </div>
      <div class="col-md-6">
        <h6 class="text-danger">Modo Manutenção</h6>
        <p class="text-muted small">Ativar para realizar manutenções no sistema.</p>
        <button class="btn btn-outline-danger btn-sm" 
                onclick="alert('Funcionalidade disponível apenas via terminal.')">
          <i class="fas fa-tools"></i> Ativar Manutenção
        </button>
      </div>
    </div>
  </div>
</div>

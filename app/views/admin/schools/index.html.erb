<% content_for :title, "Escolas" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-school"></i> Gerenciar Escolas</h1>
  <%= link_to new_admin_school_path, class: "btn btn-primary" do %>
    <i class="fas fa-plus"></i> Nova Escola
  <% end %>
</div>

<!-- Filtros e Busca -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: admin_schools_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-9">
        <%= form.text_field :search, placeholder: "Buscar por nome, CNPJ ou endereço...", 
                           value: params[:search], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <div class="d-grid">
          <%= form.submit "Filtrar", class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Lista de Escolas -->
<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Lista de Escolas (<%= @schools.count %>)</h5>
  </div>
  <div class="card-body p-0">
    <% if @schools.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Escola</th>
              <th>CNPJ</th>
              <th>Contato</th>
              <th>Diretor</th>
              <th width="150">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @schools.each do |school| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <% if school.logo.present? %>
                      <% begin %>
                        <%= image_tag school.logo, class: "rounded-circle me-2", size: "40x40" %>
                      <% rescue %>
                        <div class="bg-secondary rounded-circle me-2 d-flex align-items-center justify-content-center" 
                             style="width: 40px; height: 40px;">
                          <i class="fas fa-school text-white"></i>
                        </div>
                      <% end %>
                    <% else %>
                      <div class="bg-secondary rounded-circle me-2 d-flex align-items-center justify-content-center" 
                           style="width: 40px; height: 40px;">
                        <i class="fas fa-school text-white"></i>
                      </div>
                    <% end %>
                    <div>
                      <strong><%= school.name %></strong>
                      <br>
                      <small class="text-muted"><%= school.address %></small>
                    </div>
                  </div>
                </td>
                <td><%= school.cnpj %></td>
                <td>
                  <% if school.phone.present? %>
                    <i class="fas fa-phone text-muted"></i> <%= school.phone %>
                  <% end %>
                </td>
                <td>
                  <% if school.direction.present? %>
                    <%= school.direction.full_name %>
                    <br>
                    <small class="text-muted"><%= school.direction.email %></small>
                  <% else %>
                    <span class="text-muted">Sem diretor</span>
                  <% end %>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to admin_school_path(school), class: "btn btn-sm btn-outline-primary", 
                               title: "Visualizar" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_school_path(school), class: "btn btn-sm btn-outline-secondary", 
                               title: "Editar" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admin_school_path(school), method: :delete, 
                               class: "btn btn-sm btn-outline-danger", title: "Excluir",
                               data: { 
                                 confirm: "Tem certeza que deseja excluir esta escola?",
                                 turbo_method: :delete 
                               } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-school fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Nenhuma escola encontrada</h5>
        <p class="text-muted">Cadastre a primeira escola do sistema.</p>
        <%= link_to new_admin_school_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus"></i> Cadastrar Escola
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Paginação -->
<% if @schools.respond_to?(:current_page) %>
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @schools %>
  </div>
<% end %>

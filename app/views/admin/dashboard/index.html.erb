<%# Page Title %>
<% content_for :title, "Dashboard - Administrador" %>

<!-- Welcome Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div>
    <h1 class="h2">
      <i class="fas fa-crown text-warning me-2"></i>
      Dashboard Administrativo
    </h1>
    <p class="text-muted mb-0">
      Bem-vindo(a), <%= current_user.full_name %>! 
      Painel de controle geral do sistema.
    </p>
  </div>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to new_admin_school_path, class: "btn btn-sm btn-outline-primary" do %>
        <i class="fas fa-plus"></i> Nova Escola
      <% end %>
      <%= link_to new_admin_user_path, class: "btn btn-sm btn-outline-success" do %>
        <i class="fas fa-user-plus"></i> Novo Usuário
      <% end %>
    </div>
  </div>
</div>

<!-- Global Statistics -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              Total de Escolas
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= School.count %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-school fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
              Total de Usuários
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= User.count %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-users fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
              Total de Alunos
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= User.where(user_type: 'student').count %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-user-graduate fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              Professores
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= User.where(user_type: 'teacher').count %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- User Types Breakdown -->
<div class="row mb-4">
  <div class="col-lg-8 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-chart-pie me-2"></i>
          Distribuição de Usuários por Tipo
        </h6>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <span>Administradores</span>
                <strong><%= User.where(user_type: 'admin').count %></strong>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-danger" role="progressbar" 
                     style="width: <%= (User.where(user_type: 'admin').count.to_f / User.count * 100).round(1) %>%"></div>
              </div>
            </div>
            
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <span>Direção</span>
                <strong><%= User.where(user_type: 'direction').count %></strong>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-warning" role="progressbar" 
                     style="width: <%= (User.where(user_type: 'direction').count.to_f / User.count * 100).round(1) %>%"></div>
              </div>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <span>Professores</span>
                <strong><%= User.where(user_type: 'teacher').count %></strong>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-info" role="progressbar" 
                     style="width: <%= (User.where(user_type: 'teacher').count.to_f / User.count * 100).round(1) %>%"></div>
              </div>
            </div>
            
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <span>Alunos</span>
                <strong><%= User.where(user_type: 'student').count %></strong>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-success" role="progressbar" 
                     style="width: <%= (User.where(user_type: 'student').count.to_f / User.count * 100).round(1) %>%"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-4 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-info-circle me-2"></i>
          Sistema
        </h6>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <small class="text-muted">Versão do Rails</small>
          <div><strong><%= Rails.version %></strong></div>
        </div>
        <div class="mb-3">
          <small class="text-muted">Versão do Ruby</small>
          <div><strong><%= RUBY_VERSION %></strong></div>
        </div>
        <div class="mb-3">
          <small class="text-muted">Ambiente</small>
          <div>
            <span class="badge bg-<%= Rails.env.production? ? 'danger' : 'success' %>">
              <%= Rails.env.capitalize %>
            </span>
          </div>
        </div>
        <div class="mb-3">
          <small class="text-muted">Última atualização</small>
          <div><strong><%= Date.current.strftime("%d/%m/%Y") %></strong></div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recent Schools and Users -->
<div class="row">
  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-school me-2"></i>
          Escolas Cadastradas
        </h6>
        <%= link_to admin_schools_path, class: "btn btn-sm btn-primary" do %>
          Gerenciar
        <% end %>
      </div>
      <div class="card-body">
        <% if School.any? %>
          <% School.order(:name).limit(5).each do |school| %>
            <div class="d-flex align-items-center mb-3">
              <div class="me-3">
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                  <i class="fas fa-school"></i>
                </div>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-0"><%= school.name %></h6>
                <small class="text-muted">
                  <%= school.users.count %> usuários cadastrados
                </small>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-school fa-3x mb-3"></i>
            <p>Nenhuma escola cadastrada</p>
            <%= link_to "Criar Escola", new_admin_school_path, class: "btn btn-primary btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-users me-2"></i>
          Usuários Recentes
        </h6>
        <%= link_to admin_users_path, class: "btn btn-sm btn-primary" do %>
          Gerenciar
        <% end %>
      </div>
      <div class="card-body">
        <% User.order(created_at: :desc).limit(5).each do |user| %>
          <div class="d-flex align-items-center mb-3">
            <div class="me-3">
              <div class="rounded-circle bg-<%= user.user_type == 'admin' ? 'danger' : user.user_type == 'direction' ? 'warning' : user.user_type == 'teacher' ? 'info' : 'success' %> text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="fas fa-user"></i>
              </div>
            </div>
            <div class="flex-grow-1">
              <h6 class="mb-0"><%= user.full_name %></h6>
              <small class="text-muted">
                <%= user.user_type.humanize %> - <%= user.school&.name || 'Sem escola' %>
              </small>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
  }
  .border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
  }
  .border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
  }
  .border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
  }
  .text-xs {
    font-size: 0.7rem;
  }
  .text-gray-800 {
    color: #5a5c69 !important;
  }
  .text-gray-300 {
    color: #dddfeb !important;
  }
</style>

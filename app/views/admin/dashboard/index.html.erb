<%# Page Title %>
<% content_for :title, "Dashboard - Administrador" %>

<!-- Welcome Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div>
    <h1 class="h2">
      <i class="fas fa-crown text-warning me-2"></i>
      Dashboard Administrativo
    </h1>
    <p class="text-muted mb-0">
      Bem-vindo(a), <%= current_user.full_name %>! 
      Painel de controle geral do sistema.
    </p>
  </div>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to new_admin_school_path, class: "btn btn-sm btn-outline-primary" do %>
        <i class="fas fa-plus"></i> Nova Escola
      <% end %>
      <%= link_to new_admin_user_path, class: "btn btn-sm btn-outline-success" do %>
        <i class="fas fa-user-plus"></i> Novo Usuário
      <% end %>
      <%= link_to new_admin_event_path, class: "btn btn-sm btn-outline-info" do %>
        <i class="fas fa-calendar-plus"></i> Novo Evento
      <% end %>
    </div>
  </div>
</div>

<!-- Global Statistics -->
<div class="row mb-4">
  <div class="col-xl-4 col-md-6 mb-4">
    <div class="card card-stat border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              Total de Escolas
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @total_schools %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-school fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-4 col-md-6 mb-4">
    <div class="card card-stat border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
              Total de Alunos
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @total_students %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-user-graduate fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-4 col-md-6 mb-4">
    <div class="card card-stat border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              Professores
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @total_teachers %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- User Types Breakdown -->
<div class="row mb-4">
  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-chart-pie me-2"></i>
          Distribuição de Usuários por Tipo
        </h6>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <span>Administradores</span>
                <strong><%= User.where(user_type: 'admin').count %></strong>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-danger" role="progressbar" 
                     style="width: <%= (User.where(user_type: 'admin').count.to_f / User.count * 100).round(1) %>%"></div>
              </div>
            </div>
            
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <span>Direção</span>
                <strong><%= @total_directors %></strong>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-warning" role="progressbar" 
                     style="width: <%= (@total_directors.to_f / User.count * 100).round(1) %>%"></div>
              </div>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <span>Professores</span>
                <strong><%= @total_teachers %></strong>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-info" role="progressbar" 
                     style="width: <%= (@total_teachers.to_f / User.count * 100).round(1) %>%"></div>
              </div>
            </div>
            
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <span>Alunos</span>
                <strong><%= @total_students %></strong>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-success" role="progressbar" 
                     style="width: <%= (@total_students.to_f / User.count * 100).round(1) %>%"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-success">
          <i class="fas fa-chart-line me-2"></i>
          Taxa de Presença Municipal
        </h6>
      </div>
      <div class="card-body">
        <div class="text-center">
          <div class="h3 mb-2 font-weight-bold text-success">
            <%= @general_attendance_rate %>%
          </div>
          <p class="text-muted mb-3">Taxa média de presença nos últimos 30 dias</p>
          <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar bg-success" role="progressbar" 
                 style="width: <%= @general_attendance_rate %>%"
                 aria-valuenow="<%= @general_attendance_rate %>" aria-valuemin="0" aria-valuemax="100">
              <%= @general_attendance_rate %>%
            </div>
          </div>
        </div>
        <div class="row text-center">
          <div class="col">
            <small class="text-muted">Matrículas Ativas</small>
            <div class="font-weight-bold"><%= @active_enrollments %></div>
          </div>
          <div class="col">
            <small class="text-muted">Período</small>
            <div class="font-weight-bold">30 dias</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Schools Distribution -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-chart-bar me-2"></i>
          Distribuição de Alunos por Escola
        </h6>
      </div>
      <div class="card-body">
        <% if @students_by_school.any? %>
          <% @students_by_school.each do |school_name, student_count| %>
            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <span class="font-weight-medium"><%= school_name %></span>
                <span class="badge badge-primary"><%= student_count %> alunos</span>
              </div>
              <div class="progress">
                <div class="progress-bar bg-primary" role="progressbar" 
                     style="width: <%= (student_count.to_f / @total_students * 100).round(1) %>%"
                     aria-valuenow="<%= student_count %>" aria-valuemin="0" aria-valuemax="<%= @total_students %>">
                  <%= (student_count.to_f / @total_students * 100).round(1) %>%
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted">
            <i class="fas fa-info-circle fa-2x mb-3"></i>
            <p>Nenhuma escola com alunos matriculados encontrada.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- Recent Events/Communications -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-bullhorn me-2"></i>
          Últimos Comunicados Municipais
        </h6>
        <%= link_to new_admin_event_path, class: "btn btn-sm btn-primary" do %>
          <i class="fas fa-plus"></i> Novo Comunicado
        <% end %>
      </div>
      <div class="card-body">
        <% if @recent_events.any? %>
          <% @recent_events.each do |event| %>
            <div class="d-flex align-items-center py-2 border-bottom">
              <div class="flex-shrink-0">
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                  <i class="fas fa-calendar-alt"></i>
                </div>
              </div>
              <div class="flex-grow-1 ms-3">
                <div class="font-weight-bold"><%= event.title %></div>
                <small class="text-muted">
                  <%= event.start_date&.strftime("%d/%m/%Y") %> 
                  <% if event.school %>
                    • <%= event.school.name %>
                  <% else %>
                    • <span class="badge badge-info">Municipal</span>
                  <% end %>
                </small>
              </div>
              <div class="text-end">
                <%= link_to admin_event_path(event), class: "btn btn-sm btn-outline-primary" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="text-center mt-3">
            <%= link_to admin_events_path, class: "btn btn-sm btn-outline-primary" do %>
              Ver todos os eventos <i class="fas fa-arrow-right"></i>
            <% end %>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-calendar-times fa-2x mb-3"></i>
            <p>Nenhum comunicado recente encontrado.</p>
            <%= link_to new_admin_event_path, class: "btn btn-primary" do %>
              <i class="fas fa-plus"></i> Criar Primeiro Comunicado
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-tachometer-alt me-2"></i>
          Ações Rápidas - Gestão Municipal
        </h6>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-lg-3 col-md-6 mb-3">
            <%= link_to admin_calendars_path, class: "text-decoration-none" do %>
              <div class="card border-left-danger h-100">
                <div class="card-body text-center">
                  <i class="fas fa-calendar-check fa-2x text-danger mb-2"></i>
                  <h6 class="text-danger">Calendário Acadêmico</h6>
                  <small class="text-muted">Gerenciar feriados e datas importantes</small>
                </div>
              </div>
            <% end %>
          </div>

          <div class="col-lg-3 col-md-6 mb-3">
            <%= link_to admin_events_path, class: "text-decoration-none" do %>
              <div class="card border-left-primary h-100">
                <div class="card-body text-center">
                  <i class="fas fa-calendar-alt fa-2x text-primary mb-2"></i>
                  <h6 class="text-primary">Eventos Municipais</h6>
                  <small class="text-muted">Gerenciar eventos e comunicados</small>
                </div>
              </div>
            <% end %>
          </div>
          
          <div class="col-lg-3 col-md-6 mb-3">
            <%= link_to admin_documents_path, class: "text-decoration-none" do %>
              <div class="card border-left-success h-100">
                <div class="card-body text-center">
                  <i class="fas fa-file-archive fa-2x text-success mb-2"></i>
                  <h6 class="text-success">GED Municipal</h6>
                  <small class="text-muted">Documentos oficiais</small>
                </div>
              </div>
            <% end %>
          </div>
          
          <div class="col-lg-3 col-md-6 mb-3">
            <%= link_to admin_reports_path, class: "text-decoration-none" do %>
              <div class="card border-left-info h-100">
                <div class="card-body text-center">
                  <i class="fas fa-chart-bar fa-2x text-info mb-2"></i>
                  <h6 class="text-info">Relatórios</h6>
                  <small class="text-muted">Análises e estatísticas</small>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-lg-3 col-md-6 mb-3">
            <%= link_to admin_settings_path, class: "text-decoration-none" do %>
              <div class="card border-left-warning h-100">
                <div class="card-body text-center">
                  <i class="fas fa-cogs fa-2x text-warning mb-2"></i>
                  <h6 class="text-warning">Configurações</h6>
                  <small class="text-muted">Sistema e permissões</small>
                </div>
              </div>
            <% end %>
          </div>

          <div class="col-lg-3 col-md-6 mb-3">
            <%= link_to calendars_path, class: "text-decoration-none" do %>
              <div class="card border-left-secondary h-100">
                <div class="card-body text-center">
                  <i class="fas fa-eye fa-2x text-secondary mb-2"></i>
                  <h6 class="text-secondary">Visualizar Calendário</h6>
                  <small class="text-muted">Visão geral do calendário</small>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recent Schools and Users -->
<div class="row">
  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-school me-2"></i>
          Escolas Cadastradas
        </h6>
        <%= link_to admin_schools_path, class: "btn btn-sm btn-primary" do %>
          Gerenciar
        <% end %>
      </div>
      <div class="card-body">
        <% if School.any? %>
          <% School.order(:name).limit(5).each do |school| %>
            <div class="d-flex align-items-center mb-3">
              <div class="me-3">
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                  <i class="fas fa-school"></i>
                </div>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-0"><%= school.name %></h6>
                <small class="text-muted">
                  <%= school.users.count %> usuários cadastrados
                </small>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-school fa-3x mb-3"></i>
            <p>Nenhuma escola cadastrada</p>
            <%= link_to "Criar Escola", new_admin_school_path, class: "btn btn-primary btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-users me-2"></i>
          Usuários Recentes
        </h6>
        <%= link_to admin_users_path, class: "btn btn-sm btn-primary" do %>
          Gerenciar
        <% end %>
      </div>
      <div class="card-body">
        <% User.order(created_at: :desc).limit(5).each do |user| %>
          <div class="d-flex align-items-center mb-3">
            <div class="me-3">
              <div class="rounded-circle bg-<%= user.user_type == 'admin' ? 'danger' : user.user_type == 'direction' ? 'warning' : user.user_type == 'teacher' ? 'info' : 'success' %> text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                <i class="fas fa-user"></i>
              </div>
            </div>
            <div class="flex-grow-1">
              <h6 class="mb-0"><%= user.full_name %></h6>
              <small class="text-muted">
                <%= user.user_type.humanize %> - <%= user.school&.name || 'Sem escola' %>
              </small>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
  }
  .border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
  }
  .border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
  }
  .border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
  }
  .border-left-danger {
    border-left: 0.25rem solid #e74a3b !important;
  }
  .border-left-secondary {
    border-left: 0.25rem solid #858796 !important;
  }
  .text-xs {
    font-size: 0.7rem;
  }
  .text-gray-800 {
    color: #5a5c69 !important;
  }
  .text-gray-300 {
    color: #dddfeb !important;
  }
</style>

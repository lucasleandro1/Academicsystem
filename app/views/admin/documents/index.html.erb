<% content_for :title, "GED Municipal - Administrador" %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div>
    <h1 class="h2">
      <i class="fas fa-file-archive text-success me-2"></i>
      Gestão Eletrônica de Documentos (GED)
    </h1>
    <p class="text-muted mb-0">Gerencie documentos oficiais da rede municipal de ensino.</p>
  </div>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to new_admin_document_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus"></i> Novo Documento
    <% end %>
  </div>
</div>

<!-- Filtros -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: admin_documents_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-3">
        <%= form.text_field :search, placeholder: "Buscar documentos...", 
                           value: params[:search], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.select :document_type, 
                       options_for_select([
                         ['Todos os tipos', ''],
                         ['Boletim', 'boletim'],
                         ['Histórico', 'historico'],
                         ['Ocorrência', 'ocorrencia'],
                         ['Comunicado', 'comunicado'],
                         ['Regulamento', 'regulamento'],
                         ['Circular', 'circular'],
                         ['Ata', 'ata'],
                         ['Certificado', 'certificado'],
                         ['Declaração', 'declaracao'],
                         ['Outros', 'outros']
                       ], params[:document_type]),
                       {}, { class: "form-select" } %>
      </div>
      <div class="col-md-3">
        <%= form.select :school_id, 
                       options_from_collection_for_select(@schools, :id, :name, params[:school_id]),
                       { prompt: "Todas as escolas" }, 
                       { class: "form-select" } %>
      </div>
      <div class="col-md-3">
        <%= form.submit "Buscar", class: "btn btn-outline-primary" %>
        <%= link_to "Limpar", admin_documents_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Lista de Documentos -->
<div class="card">
  <div class="card-header">
    <h6 class="mb-0">
      <i class="fas fa-folder-open me-2"></i>
      Documentos Cadastrados (<%= @documents.count %>)
    </h6>
  </div>
  <div class="card-body">
    <% if @documents.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Documento</th>
              <th>Tipo</th>
              <th>Escola</th>
              <th>Municipal</th>
              <th>Data</th>
              <th width="150">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @documents.each do |document| %>
              <tr>
                <td>
                  <i class="fas fa-file-alt text-muted me-2"></i>
                  <strong><%= document.title %></strong>
                  <% if document.description.present? %>
                    <br><small class="text-muted"><%= truncate(document.description, length: 60) %></small>
                  <% end %>
                </td>
                <td>
                  <span class="badge bg-info"><%= document.document_type&.humanize || "N/A" %></span>
                </td>
                <td>
                  <%= document.school.name %>
                </td>
                <td>
                  <% if document.municipal? %>
                    <span class="badge bg-warning">Sim</span>
                  <% else %>
                    <span class="badge bg-light text-dark">Não</span>
                  <% end %>
                </td>
                <td>
                  <%= document.created_at.strftime("%d/%m/%Y") %>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <%= link_to admin_document_path(document), class: "btn btn-outline-info", title: "Ver" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <% if document.file_path.present? %>
                      <%= link_to download_admin_document_path(document), class: "btn btn-outline-success", title: "Download" do %>
                        <i class="fas fa-download"></i>
                      <% end %>
                    <% end %>
                    <%= link_to edit_admin_document_path(document), class: "btn btn-outline-warning", title: "Editar" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admin_document_path(document), method: :delete, 
                               class: "btn btn-outline-danger", title: "Excluir",
                               confirm: "Tem certeza que deseja excluir este documento?" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-file-archive fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Nenhum documento encontrado</h5>
        <p class="text-muted">Comece adicionando documentos oficiais ao sistema.</p>
        <%= link_to new_admin_document_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus"></i> Adicionar Primeiro Documento
        <% end %>
      </div>
    <% end %>
  </div>
</div>

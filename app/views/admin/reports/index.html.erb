<% content_for :title, "Relatórios Municipais - Administrador" %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div>
    <h1 class="h2">
      <i class="fas fa-chart-bar text-info me-2"></i>
      Relatórios Municipais
    </h1>
    <p class="text-muted mb-0">Análises consolidadas de toda a rede municipal de ensino.</p>
  </div>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to "#", class: "btn btn-outline-danger", onclick: "alert('Funcionalidade em desenvolvimento')" do %>
        <i class="fas fa-file-pdf"></i> Exportar PDF
      <% end %>
      <%= link_to "#", class: "btn btn-outline-success", onclick: "alert('Funcionalidade em desenvolvimento')" do %>
        <i class="fas fa-file-excel"></i> Exportar Excel
      <% end %>
    </div>
  </div>
</div>

<!-- Resumo Geral -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              Total de Escolas
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @total_schools %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-school fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
              Total de Alunos
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @total_students %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-user-graduate fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
              Total de Professores
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @total_teachers %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card card-stat border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              Diretores
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @total_directions %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-user-tie fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Relatórios Específicos -->
<div class="row mb-4">
  <div class="col-lg-3 col-md-6 mb-4">
    <div class="card border-left-primary h-100">
      <div class="card-body text-center">
        <i class="fas fa-chart-pie fa-2x text-primary mb-2"></i>
        <h6 class="text-primary">Visão Geral</h6>
        <small class="text-muted">Panorama da rede municipal</small>
        <div class="mt-2">
          <button class="btn btn-sm btn-outline-primary" onclick="alert('Funcionalidade em desenvolvimento')">
            Ver Relatório
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6 mb-4">
    <div class="card border-left-success h-100">
      <div class="card-body text-center">
        <i class="fas fa-user-check fa-2x text-success mb-2"></i>
        <h6 class="text-success">Presença</h6>
        <small class="text-muted">Taxa de presença por escola</small>
        <div class="mt-2">
          <button class="btn btn-sm btn-outline-success" onclick="alert('Funcionalidade em desenvolvimento')">
            Ver Relatório
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6 mb-4">
    <div class="card border-left-info h-100">
      <div class="card-body text-center">
        <i class="fas fa-chart-line fa-2x text-info mb-2"></i>
        <h6 class="text-info">Desempenho</h6>
        <small class="text-muted">Notas e rendimento</small>
        <div class="mt-2">
          <button class="btn btn-sm btn-outline-info" onclick="alert('Funcionalidade em desenvolvimento')">
            Ver Relatório
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6 mb-4">
    <div class="card border-left-warning h-100">
      <div class="card-body text-center">
        <i class="fas fa-user-times fa-2x text-warning mb-2"></i>
        <h6 class="text-warning">Evasão</h6>
        <small class="text-muted">Taxa de evasão escolar</small>
        <div class="mt-2">
          <button class="btn btn-sm btn-outline-warning" onclick="alert('Funcionalidade em desenvolvimento')">
            Ver Relatório
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Tabela Resumo por Escola -->
<div class="card">
  <div class="card-header">
    <h6 class="mb-0">
      <i class="fas fa-table me-2"></i>
      Resumo por Escola
    </h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Escola</th>
            <th>Alunos</th>
            <th>Professores</th>
            <th>Diretores</th>
            <th>Total</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @schools_stats.each do |stat| %>
            <tr>
              <td>
                <strong><%= stat[:school].name %></strong>
                <% if stat[:school].cnpj.present? %>
                  <br><small class="text-muted">CNPJ: <%= stat[:school].cnpj %></small>
                <% end %>
              </td>
              <td>
                <span class="badge bg-success"><%= stat[:students_count] %></span>
              </td>
              <td>
                <span class="badge bg-info"><%= stat[:teachers_count] %></span>
              </td>
              <td>
                <span class="badge bg-warning"><%= stat[:directions_count] %></span>
              </td>
              <td>
                <strong><%= stat[:total_users] %></strong>
              </td>
              <td>
                <%= link_to admin_school_path(stat[:school]), 
                           class: "btn btn-sm btn-outline-primary", title: "Ver detalhes" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  .border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
  }
  .border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
  }
  .border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
  }
  .border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
  }
  .text-xs {
    font-size: 0.7rem;
  }
  .text-gray-800 {
    color: #5a5c69 !important;
  }
  .text-gray-300 {
    color: #dddfeb !important;
  }
</style>

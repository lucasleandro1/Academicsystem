<% content_for :title, "Diretores" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-user-tie"></i> Gerenciar Diretores</h1>
  <%= link_to new_admin_direction_path, class: "btn btn-primary" do %>
    <i class="fas fa-plus"></i> Novo Diretor
  <% end %>
</div>

<!-- Filtros e Busca -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: admin_directions_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-4">
        <%= form.text_field :search, placeholder: "Buscar por nome ou e-mail...", 
                           value: params[:search], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.collection_select :school_id, @schools, :id, :name, 
                                   { prompt: "Todas as escolas" }, 
                                   { class: "form-select" } %>
      </div>
      <div class="col-md-3">
        <div class="d-grid">
          <%= form.submit "Filtrar", class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Lista de Diretores -->
<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Lista de Diretores (<%= @directions.count %>)</h5>
  </div>
  <div class="card-body p-0">
    <% if @directions.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Diretor</th>
              <th>Escola</th>
              <th>Contato</th>
              <th>Cadastro</th>
              <th width="150">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @directions.each do |direction| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="bg-primary rounded-circle me-2 d-flex align-items-center justify-content-center" 
                         style="width: 40px; height: 40px;">
                      <i class="fas fa-user text-white"></i>
                    </div>
                    <div>
                      <strong><%= direction.full_name %></strong>
                      <br>
                      <small class="text-muted"><%= direction.email %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <% if direction.school.present? %>
                    <div>
                      <strong><%= direction.school.name %></strong>
                      <br>
                      <small class="text-muted"><%= direction.school.cnpj %></small>
                    </div>
                  <% else %>
                    <span class="text-muted">Sem escola</span>
                  <% end %>
                </td>
                <td>
                  <% if direction.phone.present? %>
                    <i class="fas fa-phone text-muted"></i> <%= direction.phone %>
                    <br>
                  <% end %>
                  <i class="fas fa-envelope text-muted"></i> <%= direction.email %>
                </td>
                <td>
                  <small class="text-muted">
                    <%= direction.created_at.strftime("%d/%m/%Y") %>
                    <br>
                    <%= time_ago_in_words(direction.created_at) %> atrás
                  </small>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to admin_user_path(direction), class: "btn btn-sm btn-outline-primary", 
                               title: "Visualizar" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_user_path(direction), class: "btn btn-sm btn-outline-secondary", 
                               title: "Editar" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admin_direction_path(direction), method: :delete, 
                               class: "btn btn-sm btn-outline-danger", title: "Excluir",
                               data: { 
                                 confirm: "Tem certeza que deseja excluir este diretor?",
                                 turbo_method: :delete 
                               } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Nenhum diretor encontrado</h5>
        <p class="text-muted">Cadastre o primeiro diretor do sistema.</p>
        <%= link_to new_admin_direction_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus"></i> Cadastrar Diretor
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Paginação -->
<% if @directions.respond_to?(:current_page) %>
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @directions %>
  </div>
<% end %>

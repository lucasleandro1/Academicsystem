<% content_for :title, "Painel Administrativo" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-tachometer-alt"></i> Painel Administrativo</h1>
  <small class="text-muted">Bem-vindo, <%= current_user.full_name %></small>
</div>

<!-- Cards de Estatísticas -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card card-stat bg-primary text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5 class="card-title">Escolas</h5>
            <h2><%= @total_schools %></h2>
          </div>
          <div class="align-self-center">
            <i class="fas fa-school fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card card-stat bg-success text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5 class="card-title">Diretores</h5>
            <h2><%= @total_directions %></h2>
          </div>
          <div class="align-self-center">
            <i class="fas fa-user-tie fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card card-stat bg-info text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5 class="card-title">Usuários Totais</h5>
            <h2><%= @total_users %></h2>
          </div>
          <div class="align-self-center">
            <i class="fas fa-users fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card card-stat bg-warning text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5 class="card-title">Sistema</h5>
            <p class="mb-0">Online</p>
          </div>
          <div class="align-self-center">
            <i class="fas fa-server fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Ações Rápidas -->
<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-plus-circle"></i> Ações Rápidas</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to new_admin_school_path, class: "btn btn-outline-primary" do %>
            <i class="fas fa-school"></i> Cadastrar Nova Escola
          <% end %>
          <%= link_to new_admin_direction_path, class: "btn btn-outline-success" do %>
            <i class="fas fa-user-plus"></i> Cadastrar Diretor
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-list"></i> Escolas Recentes</h5>
      </div>
      <div class="card-body">
        <% if @recent_schools.any? %>
          <div class="list-group list-group-flush">
            <% @recent_schools.each do |school| %>
              <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= school.name %></strong>
                  <br>
                  <small class="text-muted"><%= school.address %></small>
                </div>
                <%= link_to admin_school_path(school), class: "btn btn-sm btn-outline-primary" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-muted">Nenhuma escola cadastrada.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% content_for :title, "Painel do Professor" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><i class="fas fa-chalkboard-teacher"></i> Painel do Professor</h1>
    <p class="text-muted mb-0">Bem-vindo, <%= current_user.full_name %> - <%= current_user.school.name %></p>
  </div>
  <div class="text-end">
    <small class="text-muted">
      Hoje: <%= Date.current.strftime("%d/%m/%Y") %>
      <br>
      <%= Date.current.strftime("%A").capitalize %>
    </small>
  </div>
</div>

<!-- Cards de Estatísticas -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card card-stat bg-primary text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5 class="card-title">Turmas</h5>
            <h2><%= @my_classrooms.count %></h2>
          </div>
          <div class="align-self-center">
            <i class="fas fa-users fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card card-stat bg-success text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5 class="card-title">Disciplinas</h5>
            <h2><%= @my_subjects.count %></h2>
          </div>
          <div class="align-self-center">
            <i class="fas fa-book fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card card-stat bg-info text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5 class="card-title">Alunos</h5>
            <h2><%= @total_students %></h2>
          </div>
          <div class="align-self-center">
            <i class="fas fa-user-graduate fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3 col-md-6 mb-3">
    <div class="card card-stat bg-warning text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5 class="card-title">Mensagens</h5>
            <h2><%= @recent_messages.count %></h2>
          </div>
          <div class="align-self-center">
            <i class="fas fa-envelope fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Ações Rápidas -->
<div class="row">
  <div class="col-md-3">
    <%= link_to teachers_subjects_path, class: "btn btn-outline-primary w-100 mb-3 p-3" do %>
      <i class="fas fa-book fa-2x d-block mb-2"></i>
      <strong>Minhas Disciplinas</strong>
    <% end %>
  </div>
  <div class="col-md-3">
    <%= link_to teachers_classrooms_path, class: "btn btn-outline-success w-100 mb-3 p-3" do %>
      <i class="fas fa-users fa-2x d-block mb-2"></i>
      <strong>Minhas Turmas</strong>
    <% end %>
  </div>
  <div class="col-md-3">
    <%= link_to teachers_grades_path, class: "btn btn-outline-info w-100 mb-3 p-3" do %>
      <i class="fas fa-clipboard-list fa-2x d-block mb-2"></i>
      <strong>Gerenciar Notas</strong>
    <% end %>
  </div>
  <div class="col-md-3">
    <%= link_to teachers_messages_path, class: "btn btn-outline-warning w-100 mb-3 p-3" do %>
      <i class="fas fa-envelope fa-2x d-block mb-2"></i>
      <strong>Mensagens</strong>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <%= link_to teachers_documents_path, class: "btn btn-outline-secondary w-100 mb-3 p-3" do %>
      <i class="fas fa-folder fa-2x d-block mb-2"></i>
      <strong>Documentos</strong>
    <% end %>
  </div>
  <div class="col-md-3">
    <%= link_to teachers_absences_path, class: "btn btn-outline-danger w-100 mb-3 p-3" do %>
      <i class="fas fa-calendar-times fa-2x d-block mb-2"></i>
      <strong>Controle de Faltas</strong>
    <% end %>
  </div>
  <div class="col-md-3">
    <%= link_to teachers_class_schedules_path, class: "btn btn-outline-dark w-100 mb-3 p-3" do %>
      <i class="fas fa-calendar-alt fa-2x d-block mb-2"></i>
      <strong>Grade de Horários</strong>
    <% end %>
  </div>
  <div class="col-md-3">
    <%= link_to teachers_reports_path, class: "btn btn-outline-primary w-100 mb-3 p-3" do %>
      <i class="fas fa-chart-bar fa-2x d-block mb-2"></i>
      <strong>Relatórios</strong>
    <% end %>
  </div>
</div>

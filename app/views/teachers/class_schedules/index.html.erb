<% content_for :title, "Grade de Hor치rios" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-calendar-alt"></i> Grade de Hor치rios</h1>
  <div class="text-muted">
    <small>Ano letivo: <%= Date.current.year %></small>
  </div>
</div>

<!-- Resumo das Disciplinas -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-primary"><%= @subjects.count %></h4>
        <small class="text-muted">Disciplinas</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-success"><%= @schedules_by_subject.values.map(&:values).flatten.count %></h4>
        <small class="text-muted">Total de Aulas</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-info"><%= @subjects.map(&:classroom).uniq.count %></h4>
        <small class="text-muted">Turmas</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-warning"><%= @schedules_by_subject.values.map(&:values).flatten.sum(&:duration) rescue 0 %></h4>
        <small class="text-muted">Horas/Semana</small>
      </div>
    </div>
  </div>
</div>


<!-- Grade de Hor치rios Padronizada -->
<div class="card mb-4">
  <div class="card-header">
    <h5><i class="fas fa-calendar-alt"></i> Grade de Hor치rios</h5>
  </div>

<!-- Resumo Semanal -->
<% if @schedules_by_subject.any? %>
    <div class="card-body">
      <div class="row">
        <% (0..6).each do |weekday| %>
          <div class="col">
            <h6><%= Date::DAYNAMES[weekday] %></h6>
            <% day_schedules = [] %>
            <% @schedules_by_subject.each do |subject, schedules_by_day| %>
              <% if schedules_by_day[weekday] %>
                <% day_schedules.concat(schedules_by_day[weekday]) %>
              <% end %>
            <% end %>
            <% day_schedules.sort_by(&:start_time).each do |schedule| %>
              <div class="small bg-light p-1 mb-1 rounded">
                <%= schedule.start_time.strftime("%H:%M") %><br>
                <strong><%= schedule.subject.name %></strong>
              </div>
            <% end %>
            <% if day_schedules.empty? %>
              <small class="text-muted">Sem aulas</small>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
<% end %>

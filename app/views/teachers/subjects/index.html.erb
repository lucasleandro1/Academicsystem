<% content_for :title, "Minhas Disciplinas" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-book"></i> Minhas Disciplinas</h1>
</div>

<div class="row">
  <div class="col-12">
    <% if @subjects.any? %>
      <div class="row">
        <% @subjects.each do |subject| %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card">
              <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="card-title mb-0"><%= subject.name %></h5>
                  <span class="badge bg-primary"><%= subject.students.count %> alunos</span>
                </div>
              </div>
              <div class="card-body">
                <p class="card-text">
                  <strong>Turma:</strong> <%= subject.classroom_name %><br>
                  <strong>Carga Horária:</strong> <%= subject.workload %>h
                </p>
                <% if subject.description.present? %>
                  <p class="card-text">
                    <small class="text-muted"><%= truncate(subject.description, length: 100) %></small>
                  </p>
                <% end %>
              </div>
              <div class="card-footer">
                <%= link_to "Horários", teachers_subject_class_schedules_path(subject), class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        Você ainda não foi atribuído a nenhuma disciplina.
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Mensagem</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to "Responder", new_message_path(reply_to: @message.id), class: "btn btn-sm btn-primary" %>
    <%= link_to "Voltar", messages_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <strong>De:</strong> <%= @message.sender.full_name %>
          </div>
          <small class="text-muted">
            <%= @message.created_at.strftime("%d/%m/%Y às %H:%M") %>
          </small>
        </div>
        <div class="mt-2">
          <strong>Assunto:</strong> <%= @message.subject %>
        </div>
      </div>
      <div class="card-body">
        <%= simple_format(@message.body) %>
      </div>
    </div>

    <% if @message.parent_id.present? %>
      <div class="mt-4">
        <h6>Mensagem Original:</h6>
        <div class="card bg-light">
          <div class="card-body">
            <div class="mb-2">
              <strong>De:</strong> <%= @message.parent.sender.full_name %> - 
              <%= @message.parent.created_at.strftime("%d/%m/%Y às %H:%M") %>
            </div>
            <div class="mb-2">
              <strong>Assunto:</strong> <%= @message.parent.subject %>
            </div>
            <%= simple_format(@message.parent.body) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

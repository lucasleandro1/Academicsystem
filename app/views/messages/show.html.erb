<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Mensagem</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to "Voltar", messages_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <strong>De:</strong> <%= @message.sender.full_name %>
          </div>
          <small class="text-muted">
            <%= @message.created_at.strftime("%d/%m/%Y Ã s %H:%M") %>
          </small>
        </div>
        <div class="mt-2">
          <strong>Assunto:</strong> <%= @message.subject %>
        </div>
      </div>
      <div class="card-body">
        <%= simple_format(@message.body) %>
      </div>
    </div>

    <!-- Funcionalidade de resposta com parent_id serÃ¡ implementada futuramente -->
  </div>
</div>
